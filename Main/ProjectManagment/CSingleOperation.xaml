<UserControl x:Class="GestionComerce.Main.ProjectManagment.CSingleOperation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GestionComerce.Main.ProjectManagment"
             xmlns:p="clr-namespace:GestionComerce.Resources"
             mc:Ignorable="d" d:DesignWidth="800" Height="81">
    <Border Background="#F8FAFC" CornerRadius="8" Padding="16" Margin="0,0,0,12" MouseLeftButtonDown="MyBorder_MouseLeftButtonDown">
        <Grid >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0" Background="#10B981" Width="4" Height="40" CornerRadius="2" Margin="0,0,12,0" Name="SideColor"/>
            <StackPanel Grid.Column="1">
                <TextBlock Text="" Name="OperationType" FontWeight="SemiBold" FontSize="14" Foreground="#1F2937"/>
                <TextBlock Text="" FontSize="12" Foreground="#6B7280" Margin="0,2,0,0" Name="OperationName"/>
            </StackPanel>
            <TextBlock Grid.Column="2" Text="€157.45" Name="OperationPrice" FontSize="14" FontWeight="Bold" 
                  Foreground="#059669" VerticalAlignment="Center" Margin="0,0,16,0"/>
            <TextBlock Grid.Column="3" Text="Il y a 5 min" FontSize="12"  Name="OperationDate"
                  Foreground="#9CA3AF" VerticalAlignment="Center" Margin="0,0,12,0"/>
            <Button Grid.Column="4"
                    x:Name="DeleteButton"
                    Width="30" Height="30"
                    Background="Transparent"
                    BorderThickness="0"
                    Cursor="Hand"
                    VerticalAlignment="Center"
                    Click="DeleteButton_Click"
                    ToolTip="Supprimer l'opération">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bg" Background="Transparent" CornerRadius="6" Padding="4">
                            <Viewbox Width="16" Height="16">
                                <Canvas Width="24" Height="24">
                                    <Path Data="M3 6h18M8 6V4h8v2M19 6l-1 14H6L5 6" 
                                          Stroke="#EF4444" StrokeThickness="2"
                                          StrokeStartLineCap="Round" StrokeEndLineCap="Round"
                                          StrokeLineJoin="Round"
                                          Fill="Transparent"/>
                                </Canvas>
                            </Viewbox>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="#FEE2E2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
    </Border>
</UserControl>
