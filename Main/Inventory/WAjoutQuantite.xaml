<Window x:Class="GestionComerce.Main.Inventory.WAjoutQuantite"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:res="clr-namespace:GestionComerce.Resources"
        Title="{x:Static res:Resources.AddQuantityTitle}" Height="368" Width="420"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="Transparent" 
        WindowStyle="None"
        AllowsTransparency="True">
    <Window.Resources>
        <!-- Styles here - keeping original button styles -->
    </Window.Resources>
    <Border Background="White" CornerRadius="10" BorderBrush="#E5E7EB" BorderThickness="1">
        <Grid Margin="0,0,0,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="217*"/>
                <RowDefinition Height="66*"/>
                <RowDefinition Height="23*"/>
            </Grid.RowDefinitions>
            <Border Background="#10B981" CornerRadius="8,8,0,0" Height="50" VerticalAlignment="Top">
                <Grid>
                    <TextBlock Text="{x:Static res:Resources.AddQuantityTitle}"
                              FontSize="16" FontWeight="SemiBold"
                              Foreground="White"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center" Name="Header"/>
                    <Button Name="CloseButton"
                            Content="Ã—"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="0,0,10,0"
                            Click="CloseButton_Click"/>
                </Grid>
            </Border>
            <StackPanel Margin="30,70,30,0" Grid.RowSpan="2">
                <TextBlock Text="{x:Static res:Resources.Quantity}"
                          Margin="0,0,0,6"/>
                <TextBox Name="Quantite" MaxLength="9"
                        Margin="0,0,0,18"
                        PreviewTextInput="Quantite_PreviewTextInput"
                        DataObject.Pasting="Quantite_Pasting" TextChanged="Quantite_TextChanged" />
                <CheckBox Content="{x:Static res:Resources.Ticket}"
                         x:Name="TicketCheckBox" IsChecked="True"/>
                <TextBlock Text="{x:Static res:Resources.Method}"
                          Margin="0,10,0,6"/>
                <StackPanel Grid.Row="3" x:Name="ButtonsContainer">
                    <Grid Margin="0,5,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="{x:Static res:Resources.PaymentMethod}" 
                                   Grid.Column="0"
                                   VerticalAlignment="Center"
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Margin="0,0,10,0"/>
                        <ComboBox x:Name="PaymentMethodComboBox"
                                  Grid.Column="1"
                                  Height="40"
                                  FontSize="13"
                                  SelectedIndex="0"/>
                    </Grid>
                    <Grid Margin="0,5,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button x:Name="CashButton" Grid.Column="0" Height="45" Click="CashButton_Click">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="{x:Static res:Resources.Cash}" FontSize="11" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="HalfButton" Grid.Column="2" Height="45" Click="HalfButton_Click">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="{x:Static res:Resources.HalfHalf}" FontSize="11" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="CreditButton" Grid.Column="4" Height="45" Click="CreditButton_Click">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="{x:Static res:Resources.Credit}" FontSize="11" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                </StackPanel>
                <Button x:Name="AjouterButton" Content="{x:Static res:Resources.Add}" Click="EnregistrerButton_Click" Grid.Row="2" Visibility="Collapsed"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>