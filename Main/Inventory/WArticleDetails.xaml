<Window x:Class="GestionComerce.Main.Inventory.WArticleDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:res="clr-namespace:GestionComerce.Resources"
        Title="{x:Static res:Resources.ArticleDetails}"
        Width="700" Height="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True">

    <Window.Resources>
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#34495E"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <Style x:Key="ValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#1F2937"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <Style x:Key="CloseButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#718096"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F7FAFC"/>
                                <Setter Property="Foreground" Value="#E53E3E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Padding="30" Margin="20"
            Background="White" CornerRadius="12">
        <Border.Effect>
            <DropShadowEffect Color="Black" Direction="320"
                              ShadowDepth="6" BlurRadius="20" Opacity="0.4"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Close Button -->
            <Button Name="CloseButton"
                    Style="{StaticResource CloseButton}"
                    Content="Ã—"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="0,-10,-10,0"
                    Panel.ZIndex="1000"
                    Click="CloseButton_Click"/>

            <!-- Header -->
            <TextBlock Grid.Row="0"
                       Text="{x:Static res:Resources.ArticleDetails}"
                       Style="{StaticResource HeaderStyle}"/>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left Column -->
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="{x:Static res:Resources.ArticleID}" Style="{StaticResource LabelStyle}"/>
                        <TextBlock x:Name="ArticleID" Style="{StaticResource ValueStyle}"/>

                        <TextBlock Text="{x:Static res:Resources.Code}" Style="{StaticResource LabelStyle}"/>
                        <TextBlock x:Name="Code" Style="{StaticResource ValueStyle}" FontFamily="Consolas"/>

                        <TextBlock Text="{x:Static res:Resources.ArticleName}" Style="{StaticResource LabelStyle}"/>
                        <TextBlock x:Name="ArticleName" Style="{StaticResource ValueStyle}" FontWeight="SemiBold"/>

                        <TextBlock Text="{x:Static res:Resources.Family}" Style="{StaticResource LabelStyle}"/>
                        <TextBlock x:Name="Famille" Style="{StaticResource ValueStyle}"/>

                        <TextBlock Text="{x:Static res:Resources.Supplier}" Style="{StaticResource LabelStyle}"/>
                        <TextBlock x:Name="Fournisseur" Style="{StaticResource ValueStyle}"/>

                        <TextBlock Text="{x:Static res:Resources.Brand}" Style="{StaticResource LabelStyle}"/>
                        <TextBlock x:Name="Marque" Style="{StaticResource ValueStyle}"/>

                        <TextBlock Text="{x:Static res:Resources.PurchasePrice}" Style="{StaticResource LabelStyle}"/>
                        <TextBlock x:Name="PrixAchat" Style="{StaticResource ValueStyle}" 
                                   Foreground="#059669" FontWeight="SemiBold"/>

                        <TextBlock Text="{x:Static res:Resources.SellingPrice}" Style="{StaticResource LabelStyle}"/>
                        <TextBlock x:Name="PrixVente" Style="{StaticResource ValueStyle}" 
                                   Foreground="#DC2626" FontWeight="SemiBold"/>
                    </StackPanel>

                    <!-- Right Column -->
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="{x:Static res:Resources.MarketPrice}" Style="{StaticResource LabelStyle}"/>
                        <TextBlock x:Name="PrixMP" Style="{StaticResource ValueStyle}" 
                                   Foreground="#7C3AED" FontWeight="SemiBold"/>

                        <TextBlock Text="{x:Static res:Resources.StockQuantity}" Style="{StaticResource LabelStyle}"/>
                        <TextBlock x:Name="Quantite" Style="{StaticResource ValueStyle}" FontWeight="SemiBold"/>

                        <TextBlock Text="{x:Static res:Resources.TVA}" Style="{StaticResource LabelStyle}"/>
                        <TextBlock x:Name="TVA" Style="{StaticResource ValueStyle}"/>

                        <TextBlock Text="{x:Static res:Resources.LotNumber}" Style="{StaticResource LabelStyle}"/>
                        <TextBlock x:Name="NumeroLot" Style="{StaticResource ValueStyle}"/>

                        <TextBlock Text="{x:Static res:Resources.DeliveryNote}" Style="{StaticResource LabelStyle}"/>
                        <TextBlock x:Name="BonLivraison" Style="{StaticResource ValueStyle}"/>

                        <TextBlock Text="{x:Static res:Resources.Date}" Style="{StaticResource LabelStyle}"/>
                        <TextBlock x:Name="DateArticle" Style="{StaticResource ValueStyle}"/>

                        <TextBlock Text="{x:Static res:Resources.DeliveryDate}" Style="{StaticResource LabelStyle}"/>
                        <TextBlock x:Name="DateLivraison" Style="{StaticResource ValueStyle}"/>

                        <TextBlock Text="{x:Static res:Resources.ExpirationDate}" Style="{StaticResource LabelStyle}"/>
                        <TextBlock x:Name="DateExpiration" Style="{StaticResource ValueStyle}"/>
                    </StackPanel>
                </Grid>
            </ScrollViewer>

            <!-- Close Button at Bottom -->
            <Button Grid.Row="2" Content="{x:Static res:Resources.Close}" Click="CloseButton_Click"
                    Width="120" Height="40" Margin="0,20,0,0"
                    HorizontalAlignment="Center">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#6B7280"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="8">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#4B5563"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="#374151"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
    </Border>
</Window>
