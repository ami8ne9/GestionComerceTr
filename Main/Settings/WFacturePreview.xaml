<Window x:Class="GestionComerce.Settings.WFacturePreview"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:res="clr-namespace:GestionComerce.Resources"
        Title="{x:Static res:Resources.Preview_Title}" Height="700" Width="400"
        WindowStartupLocation="CenterScreen" WindowStyle="None" 
        ResizeMode="NoResize" Background="Transparent" AllowsTransparency="True">

    <Border Background="#F5F5F5" CornerRadius="12" BorderThickness="1" 
            BorderBrush="#D1D5DB" Margin="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="#2C3E50" Padding="15" CornerRadius="12,12,0,0">
                <TextBlock Text="{x:Static res:Resources.Preview_Header}" 
                       FontSize="16" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
            </Border>

            <!-- Ticket Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <Border Background="White" Margin="20" Padding="0">
                    <Border x:Name="ticketArea" Background="White" BorderBrush="#CCCCCC" 
                            BorderThickness="1" Width="302" Padding="15">
                        <StackPanel>
                            <!-- Company Logo and Info -->
                            <Image x:Name="imgLogo" Height="60" Stretch="Uniform" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                            <TextBlock x:Name="txtCompanyName" FontSize="16" FontWeight="Bold" TextAlignment="Center" TextWrapping="Wrap" Margin="0,0,0,5"/>
                            <TextBlock x:Name="txtCompanyAddress" FontSize="10" TextAlignment="Center" TextWrapping="Wrap" Margin="0,0,0,3"/>
                            <TextBlock x:Name="txtCompanyPhone" FontSize="10" TextAlignment="Center" Margin="0,0,0,3"/>
                            <TextBlock x:Name="txtCompanyEmail" FontSize="10" TextAlignment="Center" Margin="0,0,0,10"/>
                            
                            <Border BorderBrush="Black" BorderThickness="0,1,0,0" Margin="0,5,0,5"/>
                            
                            <!-- Invoice Number and Date -->
                            <TextBlock FontSize="11" FontWeight="Bold" TextAlignment="Center" Margin="0,5,0,2">
                                <Run Text="{x:Static res:Resources.InvoiceNumber}"/><Run Text=" "/><Run x:Name="txtInvoiceNumber"/>
                            </TextBlock>
                            <TextBlock x:Name="txtInvoiceDate" FontSize="10" TextAlignment="Center" Margin="0,0,0,5"/>
                            
                            <Border BorderBrush="Black" BorderThickness="0,1,0,0" Margin="0,5,0,10"/>
                            
                            <!-- Sample Items -->
                            <StackPanel Margin="0,0,0,10">
                                <Grid Margin="0,2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Article 1 x2" FontSize="10"/>
                                    <TextBlock Grid.Column="1" Text="100.00 DH" FontSize="10"/>
                                </Grid>
                                <Grid Margin="0,2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Article 2 x1" FontSize="10"/>
                                    <TextBlock Grid.Column="1" Text="75.00 DH" FontSize="10"/>
                                </Grid>
                                <Grid Margin="0,2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Article 3 x1" FontSize="10"/>
                                    <TextBlock Grid.Column="1" Text="75.00 DH" FontSize="10"/>
                                </Grid>
                            </StackPanel>
                            
                            <Border BorderBrush="Black" BorderThickness="0,1,0,0" Margin="0,5,0,5"/>
                            
                            <!-- Totals -->
                            <Grid Margin="0,5,0,2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="{x:Static res:Resources.TotalAmountExclVAT}" FontSize="10" FontWeight="SemiBold"/>
                                <TextBlock Grid.Column="1" Text="250.00 DH" FontSize="10" FontWeight="SemiBold"/>
                            </Grid>
                            
                            <Grid Margin="0,2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="{x:Static res:Resources.Discount}" FontSize="10"/>
                                <TextBlock Grid.Column="1" Text="-10.00 DH" FontSize="10"/>
                            </Grid>
                            
                            <Grid Margin="0,2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock x:Name="txtTaxLabel" Grid.Column="0" Text="{x:Static res:Resources.TVA}" FontSize="10"/>
                                <TextBlock x:Name="txtTax" Grid.Column="1" Text="48.00 DH" FontSize="10"/>
                            </Grid>
                            
                            <Border BorderBrush="Black" BorderThickness="0,1,0,0" Margin="0,5,0,5"/>
                            
                            <Grid Margin="0,5,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="{x:Static res:Resources.Total}" FontSize="12" FontWeight="Bold"/>
                                <TextBlock x:Name="txtTotal" Grid.Column="1" Text="288.00 DH" FontSize="12" FontWeight="Bold"/>
                            </Grid>
                            
                            <Border BorderBrush="Black" BorderThickness="0,1,0,0" Margin="0,5,0,10"/>
                            
                            <TextBlock x:Name="txtTermsAndConditions" FontSize="9" TextAlignment="Center" 
                                       TextWrapping="Wrap" Margin="0,0,0,10" Foreground="#666666"/>
                            <TextBlock x:Name="txtFooter" FontSize="11" FontWeight="Bold" TextAlignment="Center" 
                                       TextWrapping="Wrap" Margin="0,0,0,10"/>
                        </StackPanel>
                    </Border>
                </Border>
            </ScrollViewer>

            <!-- Close Button -->
            <Border Grid.Row="2" Background="White" Padding="15" BorderBrush="#CCCCCC" 
                    BorderThickness="0,1,0,0" CornerRadius="0,0,12,12">
                <Button x:Name="btnClose" Content="{x:Static res:Resources.Preview_Close}" 
                        Padding="40,12" FontSize="13" Background="#2C3E50" Foreground="White"
                        FontWeight="SemiBold" BorderThickness="0" Cursor="Hand" 
                        HorizontalAlignment="Center" Click="BtnClose_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" 
                                                  Margin="{TemplateBinding Padding}"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Border>
        </Grid>
    </Border>
</Window>
