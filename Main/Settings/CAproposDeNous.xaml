<UserControl x:Class="GestionComerce.Main.Settings.CAproposDeNous"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GestionComerce.Main.Settings"
             xmlns:res="clr-namespace:GestionComerce.Resources"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="#F8FAFC">

    <UserControl.Resources>
        <SolidColorBrush x:Key="PrimaryBrush" Color="#3B82F6"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#8B5CF6"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="#10B981"/>
        <SolidColorBrush x:Key="SurfaceBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#E2E8F0"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="#0F172A"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#64748B"/>
        <SolidColorBrush x:Key="HoverBrush" Color="#F1F5F9"/>

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="32"/>
            <Setter Property="Margin" Value="0,0,0,24"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="TitleStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        </Style>

        <Style x:Key="SubtitleStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>

        <Style x:Key="BodyTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="LineHeight" Value="24"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <Style x:Key="ContactButtonStyle" TargetType="Button">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,0,12,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="10" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="FeatureCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource HoverBrush}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,16,16"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="40,32">
        <StackPanel MaxWidth="1000">

            <!-- Header Section -->
            <Border Style="{StaticResource CardStyle}" Background="#EEF2FF">
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Border Background="White" Padding="8" CornerRadius="8" 
                                Height="70" Margin="0,0,24,0" Grid.Column="0" VerticalAlignment="Center">
                            <Image Source="/Main/images/A.png" Stretch="Uniform"/>
                        </Border>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{x:Static res:Resources.About_Title}" 
                                       Style="{StaticResource TitleStyle}"
                                       Foreground="{StaticResource PrimaryBrush}"/>
                            <TextBlock Text="{x:Static res:Resources.About_Tagline}" 
                                       FontSize="18"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       Margin="0,8,0,0"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- About Section -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Border Background="#DBEAFE" CornerRadius="10" Padding="10"
                                Margin="0,0,12,0" Grid.Column="0">
                            <TextBlock Text="â„¹ï¸" FontSize="20"/>
                        </Border>
                        <TextBlock Text="{x:Static res:Resources.About_SolutionTitle}" 
                                   Style="{StaticResource SubtitleStyle}"
                                   VerticalAlignment="Center" Margin="0" Grid.Column="1"/>
                    </Grid>

                    <TextBlock Style="{StaticResource BodyTextStyle}" Margin="0,16,0,16"
                               Text="{x:Static res:Resources.About_Description1}"/>

                    <TextBlock Style="{StaticResource BodyTextStyle}"
                               Text="{x:Static res:Resources.About_Description2}"/>
                </StackPanel>
            </Border>

            <!-- Features Section -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Border Background="#DCFCE7" CornerRadius="10" Padding="10"
                                Margin="0,0,12,0" Grid.Column="0">
                            <TextBlock Text="âœ¨" FontSize="20"/>
                        </Border>
                        <TextBlock Text="{x:Static res:Resources.About_MainFeatures}" 
                                   Style="{StaticResource SubtitleStyle}"
                                   VerticalAlignment="Center" Margin="0" Grid.Column="1"/>
                    </Grid>

                    <Grid Margin="0,16,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Border Style="{StaticResource FeatureCardStyle}" Grid.Column="0" Grid.Row="0">
                            <StackPanel>
                                <TextBlock FontSize="16" FontWeight="SemiBold"
                                           Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,8">
                                    <Run Text="ðŸ“Š "/><Run Text="{x:Static res:Resources.About_SalesManagement}"/>
                                </TextBlock>
                                <TextBlock Text="{x:Static res:Resources.About_SalesManagementDesc}" FontSize="13"
                                           Foreground="{StaticResource TextSecondaryBrush}" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource FeatureCardStyle}" Grid.Column="1" Grid.Row="0">
                            <StackPanel>
                                <TextBlock FontSize="16" FontWeight="SemiBold"
                                           Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,8">
                                    <Run Text="ðŸ“¦ "/><Run Text="{x:Static res:Resources.About_StockManagement}"/>
                                </TextBlock>
                                <TextBlock Text="{x:Static res:Resources.About_StockManagementDesc}" FontSize="13"
                                           Foreground="{StaticResource TextSecondaryBrush}" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource FeatureCardStyle}" Grid.Column="0" Grid.Row="1">
                            <StackPanel>
                                <TextBlock FontSize="16" FontWeight="SemiBold"
                                           Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,8">
                                    <Run Text="ðŸ‘¥ "/><Run Text="{x:Static res:Resources.About_ClientManagement}"/>
                                </TextBlock>
                                <TextBlock Text="{x:Static res:Resources.About_ClientManagementDesc}" FontSize="13"
                                           Foreground="{StaticResource TextSecondaryBrush}" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource FeatureCardStyle}" Grid.Column="1" Grid.Row="1">
                            <StackPanel>
                                <TextBlock FontSize="16" FontWeight="SemiBold"
                                           Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,8">
                                    <Run Text="ðŸ“„ "/><Run Text="{x:Static res:Resources.About_AutoInvoicing}"/>
                                </TextBlock>
                                <TextBlock Text="{x:Static res:Resources.About_AutoInvoicingDesc}" FontSize="13"
                                           Foreground="{StaticResource TextSecondaryBrush}" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource FeatureCardStyle}" Grid.Column="0" Grid.Row="2">
                            <StackPanel>
                                <TextBlock FontSize="16" FontWeight="SemiBold"
                                           Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,8">
                                    <Run Text="ðŸ“ˆ "/><Run Text="{x:Static res:Resources.About_DetailedReports}"/>
                                </TextBlock>
                                <TextBlock Text="{x:Static res:Resources.About_DetailedReportsDesc}" FontSize="13"
                                           Foreground="{StaticResource TextSecondaryBrush}" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource FeatureCardStyle}" Grid.Column="1" Grid.Row="2">
                            <StackPanel>
                                <TextBlock FontSize="16" FontWeight="SemiBold"
                                           Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,8">
                                    <Run Text="ðŸ”’ "/><Run Text="{x:Static res:Resources.About_AdvancedSecurity}"/>
                                </TextBlock>
                                <TextBlock Text="{x:Static res:Resources.About_AdvancedSecurityDesc}" FontSize="13"
                                           Foreground="{StaticResource TextSecondaryBrush}" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Contact Section -->
            <Border Style="{StaticResource CardStyle}" Background="#FEF3C7">
                <StackPanel>
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Border Background="#FCD34D" CornerRadius="10" Padding="10"
                                Margin="0,0,12,0" Grid.Column="0">
                            <TextBlock Text="ðŸ“ž" FontSize="20"/>
                        </Border>
                        <TextBlock Text="{x:Static res:Resources.About_ContactUs}" 
                                   Style="{StaticResource SubtitleStyle}"
                                   VerticalAlignment="Center" Margin="0" Grid.Column="1"/>
                    </Grid>

                    <TextBlock Style="{StaticResource BodyTextStyle}" Margin="0,0,0,24"
                               Text="{x:Static res:Resources.About_ContactDesc}"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Background="{StaticResource SurfaceBrush}" CornerRadius="12"
                                Padding="24,20" Margin="0,0,12,0" Grid.Column="0"
                                BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
                            <StackPanel>
                                <TextBlock FontSize="14" FontWeight="SemiBold"
                                           Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,12">
                                    <Run Text="ðŸ“± "/><Run Text="{x:Static res:Resources.About_PrimaryContact}"/>
                                </TextBlock>
                                <TextBlock Text="{x:Static res:Resources.About_Phone1}" FontSize="22"
                                           FontWeight="Bold" Foreground="{StaticResource PrimaryBrush}"/>
                            </StackPanel>
                        </Border>

                        <Border Background="{StaticResource SurfaceBrush}" CornerRadius="12"
                                Padding="24,20" Margin="12,0,0,0" Grid.Column="1"
                                BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
                            <StackPanel>
                                <TextBlock FontSize="14" FontWeight="SemiBold"
                                           Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,12">
                                    <Run Text="ðŸ“± "/><Run Text="{x:Static res:Resources.About_SecondaryContact}"/>
                                </TextBlock>
                                <TextBlock Text="{x:Static res:Resources.About_Phone2}" FontSize="22"
                                           FontWeight="Bold" Foreground="{StaticResource SuccessBrush}"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <Border Background="{StaticResource SurfaceBrush}" CornerRadius="12"
                            Padding="24" Margin="0,16,0,0"
                            BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="{x:Static res:Resources.About_Availability}" FontSize="14"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       HorizontalAlignment="Center" Margin="0,0,0,4"/>
                            <TextBlock Text="{x:Static res:Resources.About_WorkingHours}" FontSize="14"
                                       FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Footer -->
            <Border Background="{StaticResource SurfaceBrush}" CornerRadius="12"
                    Padding="32" Margin="0,0,0,24"
                    BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="{x:Static res:Resources.About_Copyright}" FontSize="14"
                               FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}"
                               HorizontalAlignment="Center" Margin="0,0,0,8"/>
                    <TextBlock Text="{x:Static res:Resources.About_Rights}" FontSize="13"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>
