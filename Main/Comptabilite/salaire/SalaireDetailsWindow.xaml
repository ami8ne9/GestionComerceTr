<Window x:Class="Superete.Main.Comptabilite.SalaireDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bulletin de Paie" 
        Height="850" 
        Width="700"
        WindowStartupLocation="CenterScreen"
        Background="#FAFBFC"
        ResizeMode="CanResize">

    <Window.Resources>
        <Style x:Key="HeaderText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#1A202C"/>
        </Style>

        <Style x:Key="SectionTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#2D3748"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <Style x:Key="LabelText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#4A5568"/>
            <Setter Property="FontWeight" Value="Medium"/>
        </Style>

        <Style x:Key="ValueText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#2D3748"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="TextAlignment" Value="Right"/>
        </Style>

        <Style x:Key="TotalText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="TextAlignment" Value="Right"/>
        </Style>

        <Style x:Key="CloseButton" TargetType="Button">
            <Setter Property="Background" Value="#667EEA"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="24,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="42"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#7C8FF5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PrintButton" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#4A5568"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="24,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="42"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F7FAFC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="White" Padding="24" CornerRadius="12" Margin="0,0,0,16">
            <Border.Effect>
                <DropShadowEffect Color="#000000" Opacity="0.06" BlurRadius="12" ShadowDepth="2"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="📄 BULLETIN DE PAIE" 
                             FontSize="20" 
                             FontWeight="Bold" 
                             Foreground="#1A202C"/>
                    <TextBlock x:Name="txtPeriode" 
                             Text="Période: --/----" 
                             FontSize="13" 
                             Foreground="#718096" 
                             Margin="0,4,0,0"/>
                </StackPanel>

                <Border Grid.Column="1" 
                        Background="#EEF2FF" 
                        Padding="16,8" 
                        CornerRadius="8">
                    <StackPanel>
                        <TextBlock Text="STATUT" 
                                 FontSize="11" 
                                 FontWeight="SemiBold" 
                                 Foreground="#4C51BF" 
                                 HorizontalAlignment="Center"/>
                        <TextBlock x:Name="txtStatut" 
                                 Text="En Attente" 
                                 FontSize="14" 
                                 FontWeight="Bold" 
                                 Foreground="#667EEA" 
                                 HorizontalAlignment="Center" 
                                 Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Employee Information -->
                <Border Background="White" Padding="24" CornerRadius="12" Margin="0,0,0,16">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" Opacity="0.04" BlurRadius="12" ShadowDepth="2"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="INFORMATIONS EMPLOYÉ" Style="{StaticResource SectionTitle}"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="140"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Nom Complet:" Style="{StaticResource LabelText}" Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" x:Name="txtNomComplet" Text="--" Style="{StaticResource ValueText}" Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="CIN:" Style="{StaticResource LabelText}" Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" x:Name="txtCIN" Text="--" Style="{StaticResource ValueText}" Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="CNSS:" Style="{StaticResource LabelText}"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" x:Name="txtCNSS" Text="--" Style="{StaticResource ValueText}"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Salary Details -->
                <Border Background="White" Padding="24" CornerRadius="12" Margin="0,0,0,16">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" Opacity="0.04" BlurRadius="12" ShadowDepth="2"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="DÉTAILS DU SALAIRE" Style="{StaticResource SectionTitle}"/>

                        <!-- Base Salary -->
                        <Border Background="#F7FAFC" Padding="16" CornerRadius="8" Margin="0,0,0,12">
                            <StackPanel>
                                <TextBlock Text="Salaire de Base" FontSize="12" FontWeight="SemiBold" Foreground="#718096" Margin="0,0,0,8"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Salaire de Base" Style="{StaticResource LabelText}"/>
                                    <TextBlock Grid.Column="1" x:Name="txtSalaireBase" Text="0.00 DH" Style="{StaticResource ValueText}"/>
                                </Grid>
                                <Grid Margin="0,8,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Taux Horaire" Style="{StaticResource LabelText}"/>
                                    <TextBlock Grid.Column="1" x:Name="txtTauxHoraire" Text="0.00 DH/h" Style="{StaticResource ValueText}"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Overtime Hours -->
                        <Border Background="#F7FAFC" Padding="16" CornerRadius="8" Margin="0,0,0,12">
                            <StackPanel>
                                <TextBlock Text="Heures Supplémentaires" FontSize="12" FontWeight="SemiBold" Foreground="#718096" Margin="0,0,0,8"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Heures Supp. 25%" Style="{StaticResource LabelText}" Margin="0,0,0,8"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" x:Name="txtHeuresSupp25" Text="0 h" Style="{StaticResource ValueText}" Margin="0,0,0,8"/>

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Heures Supp. 50%" Style="{StaticResource LabelText}" Margin="0,0,0,8"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" x:Name="txtHeuresSupp50" Text="0 h" Style="{StaticResource ValueText}" Margin="0,0,0,8"/>

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Heures Supp. 100%" Style="{StaticResource LabelText}" Margin="0,0,0,8"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" x:Name="txtHeuresSupp100" Text="0 h" Style="{StaticResource ValueText}" Margin="0,0,0,8"/>

                                    <Rectangle Grid.Row="3" Grid.ColumnSpan="2" Height="1" Fill="#E2E8F0" Margin="0,8"/>
                                </Grid>
                                <Grid Margin="0,8,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Total Heures Supp." FontWeight="SemiBold" Style="{StaticResource LabelText}"/>
                                    <TextBlock Grid.Column="1" x:Name="txtMontantHeuresSupp" Text="0.00 DH" FontWeight="Bold" Foreground="#667EEA" Style="{StaticResource ValueText}"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Allowances and Bonuses -->
                        <Border Background="#F7FAFC" Padding="16" CornerRadius="8" Margin="0,0,0,12">
                            <StackPanel>
                                <TextBlock Text="Primes et Indemnités" FontSize="12" FontWeight="SemiBold" Foreground="#718096" Margin="0,0,0,8"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Prime d'Ancienneté" Style="{StaticResource LabelText}" Margin="0,0,0,8"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" x:Name="txtPrimeAnciennete" Text="0.00 DH" Style="{StaticResource ValueText}" Margin="0,0,0,8"/>

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Prime de Rendement" Style="{StaticResource LabelText}" Margin="0,0,0,8"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" x:Name="txtPrimeRendement" Text="0.00 DH" Style="{StaticResource ValueText}" Margin="0,0,0,8"/>

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Prime de Responsabilité" Style="{StaticResource LabelText}" Margin="0,0,0,8"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" x:Name="txtPrimeResponsabilite" Text="0.00 DH" Style="{StaticResource ValueText}" Margin="0,0,0,8"/>

                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Indemnité de Transport" Style="{StaticResource LabelText}" Margin="0,0,0,8"/>
                                    <TextBlock Grid.Row="3" Grid.Column="1" x:Name="txtIndemniteTransport" Text="0.00 DH" Style="{StaticResource ValueText}" Margin="0,0,0,8"/>

                                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Indemnité de Logement" Style="{StaticResource LabelText}" Margin="0,0,0,8"/>
                                    <TextBlock Grid.Row="4" Grid.Column="1" x:Name="txtIndemniteLogement" Text="0.00 DH" Style="{StaticResource ValueText}" Margin="0,0,0,8"/>

                                    <TextBlock Grid.Row="5" Grid.Column="0" Text="Autres Primes" Style="{StaticResource LabelText}"/>
                                    <TextBlock Grid.Row="5" Grid.Column="1" x:Name="txtAutresPrimes" Text="0.00 DH" Style="{StaticResource ValueText}"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Deductions -->
                        <Border Background="#FEF2F2" Padding="16" CornerRadius="8" Margin="0,0,0,12">
                            <StackPanel>
                                <TextBlock Text="Retenues" FontSize="12" FontWeight="SemiBold" Foreground="#991B1B" Margin="0,0,0,8"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="CNSS (4.48%)" Style="{StaticResource LabelText}" Margin="0,0,0,8"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" x:Name="txtCotisationCNSS" Text="0.00 DH" Style="{StaticResource ValueText}" Margin="0,0,0,8"/>

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="AMO (2.26%)" Style="{StaticResource LabelText}" Margin="0,0,0,8"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" x:Name="txtCotisationAMO" Text="0.00 DH" Style="{StaticResource ValueText}" Margin="0,0,0,8"/>

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Impôt sur le Revenu (IR)" Style="{StaticResource LabelText}" Margin="0,0,0,8"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" x:Name="txtMontantIR" Text="0.00 DH" Style="{StaticResource ValueText}" Margin="0,0,0,8"/>

                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="CIMR" Style="{StaticResource LabelText}" Margin="0,0,0,8"/>
                                    <TextBlock Grid.Row="3" Grid.Column="1" x:Name="txtCIMR" Text="0.00 DH" Style="{StaticResource ValueText}" Margin="0,0,0,8"/>

                                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Avance sur Salaire" Style="{StaticResource LabelText}" Margin="0,0,0,8"/>
                                    <TextBlock Grid.Row="4" Grid.Column="1" x:Name="txtAvance" Text="0.00 DH" Style="{StaticResource ValueText}" Margin="0,0,0,8"/>

                                    <TextBlock Grid.Row="5" Grid.Column="0" Text="Prêt Personnel" Style="{StaticResource LabelText}" Margin="0,0,0,8"/>
                                    <TextBlock Grid.Row="5" Grid.Column="1" x:Name="txtPret" Text="0.00 DH" Style="{StaticResource ValueText}" Margin="0,0,0,8"/>

                                    <TextBlock Grid.Row="6" Grid.Column="0" Text="Pénalités" Style="{StaticResource LabelText}" Margin="0,0,0,8"/>
                                    <TextBlock Grid.Row="6" Grid.Column="1" x:Name="txtPenalites" Text="0.00 DH" Style="{StaticResource ValueText}" Margin="0,0,0,8"/>

                                    <TextBlock Grid.Row="7" Grid.Column="0" Text="Autres Retenues" Style="{StaticResource LabelText}"/>
                                    <TextBlock Grid.Row="7" Grid.Column="1" x:Name="txtAutresRetenues" Text="0.00 DH" Style="{StaticResource ValueText}"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Remarks -->
                        <Border Background="#F7FAFC" Padding="16" CornerRadius="8" x:Name="remarquesPanel" Visibility="Collapsed">
                            <StackPanel>
                                <TextBlock Text="Remarques" FontSize="12" FontWeight="SemiBold" Foreground="#718096" Margin="0,0,0,8"/>
                                <TextBlock x:Name="txtRemarques" 
                                         Text="" 
                                         TextWrapping="Wrap" 
                                         FontSize="13" 
                                         Foreground="#4A5568"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Summary -->
                <Border Background="White" Padding="24" CornerRadius="12" BorderBrush="#E2E8F0" BorderThickness="2">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" Opacity="0.06" BlurRadius="12" ShadowDepth="2"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="SALAIRE BRUT" FontSize="14" FontWeight="SemiBold" Foreground="#4A5568"/>
                            <TextBlock Grid.Column="1" x:Name="txtSalaireBrut" Text="0.00 DH" Style="{StaticResource TotalText}" Foreground="#2D3748"/>
                        </Grid>

                        <Grid Grid.Row="1" Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="TOTAL RETENUES" FontSize="14" FontWeight="SemiBold" Foreground="#4A5568"/>
                            <TextBlock Grid.Column="1" x:Name="txtTotalRetenues" Text="0.00 DH" Style="{StaticResource TotalText}" Foreground="#F56565"/>
                        </Grid>

                        <Rectangle Height="2" Fill="#E2E8F0" Margin="0,0,0,16" Grid.Row="2"/>

                        <Grid Grid.Row="2" Margin="0,16,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="SALAIRE NET À PAYER" FontSize="16" FontWeight="Bold" Foreground="#1A202C"/>
                            <TextBlock Grid.Column="1" x:Name="txtSalaireNet" Text="0.00 DH" FontSize="22" FontWeight="Bold" Foreground="#48BB78" TextAlignment="Right"/>
                        </Grid>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer Actions -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="🖨 Imprimer" 
                    Style="{StaticResource PrintButton}" 
                    Margin="0,0,12,0"
                    Click="BtnImprimer_Click"/>
            <Button Content="Fermer" 
                    Style="{StaticResource CloseButton}" 
                    Click="BtnFermer_Click"/>
        </StackPanel>
    </Grid>
</Window>