<Window x:Class="Superete.Main.Comptabilite.EditExpenseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:p="clr-namespace:GestionComerce.Resources"
        Title="{x:Static p:Resources.EditExpense_WindowTitle}"
        Width="550"
        Height="650"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F8F9FA"
        WindowStyle="SingleBorderWindow">

    <Window.Resources>
        <!-- Modern TextBox Style - FIXED -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="48"/>
            <Setter Property="Padding" Value="14,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#E0E7FF"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#1F2937"/>
            <Setter Property="CaretBrush" Value="#1F2937"/>
            <Setter Property="SelectionBrush" Value="#6366F1"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#6366F1"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#A5B4FC"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Multi-line TextBox Style -->
        <Style x:Key="MultiLineTextBox" TargetType="TextBox" BasedOn="{StaticResource ModernTextBox}">
            <Setter Property="Height" Value="100"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="AcceptsReturn" Value="True"/>
            <Setter Property="VerticalContentAlignment" Value="Top"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
        </Style>

        <!-- Modern ComboBox Style -->
        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Height" Value="48"/>
            <Setter Property="Padding" Value="14,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#E0E7FF"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#1F2937"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#A5B4FC"/>
                </Trigger>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#6366F1"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Modern DatePicker Style -->
        <Style x:Key="ModernDatePicker" TargetType="DatePicker">
            <Setter Property="Height" Value="48"/>
            <Setter Property="Padding" Value="14,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#E0E7FF"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#1F2937"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#A5B4FC"/>
                </Trigger>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#6366F1"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#10B981"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Padding" Value="28,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                            CornerRadius="10"
                            Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#059669"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="#F3F4F6"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Padding" Value="24,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                            CornerRadius="10"
                            Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E5E7EB"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Label Style -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
    </Window.Resources>

    <Border Background="White" 
            CornerRadius="16" 
            Margin="20"
            Padding="30">
        <Border.Effect>
            <DropShadowEffect Color="#000000" Opacity="0.1" BlurRadius="20" ShadowDepth="0"/>
        </Border.Effect>

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Title -->
                <TextBlock Grid.Row="0" 
                           Text="{x:Static p:Resources.EditExpense_Title}"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="#111827"
                           Margin="0,0,0,24"/>

                <!-- Expense Name -->
                <TextBlock Grid.Row="1" 
                           Text="{x:Static p:Resources.EditExpense_NameLabel}" 
                           Style="{StaticResource LabelStyle}"/>
                <TextBox Grid.Row="2"
                         x:Name="txtName" 
                         Style="{StaticResource ModernTextBox}"
                         Margin="0,0,0,16"/>

                <!-- Category -->
                <TextBlock Grid.Row="3" 
                           Text="{x:Static p:Resources.EditExpense_CategoryLabel}" 
                           Style="{StaticResource LabelStyle}"/>
                <ComboBox Grid.Row="4"
                          x:Name="cmbCategory" 
                          Style="{StaticResource ModernComboBox}"
                          IsEditable="True"
                          Margin="0,0,0,16"/>

                <!-- Amount -->
                <TextBlock Grid.Row="5" 
                           Text="{x:Static p:Resources.EditExpense_AmountLabel}" 
                           Style="{StaticResource LabelStyle}"/>
                <TextBox Grid.Row="6"
                         x:Name="txtAmount" 
                         Style="{StaticResource ModernTextBox}"
                         Margin="0,0,0,16"/>

                <!-- Due Date -->
                <TextBlock Grid.Row="7" 
                           Text="{x:Static p:Resources.EditExpense_DueDateLabel}" 
                           Style="{StaticResource LabelStyle}"/>
                <DatePicker Grid.Row="8"
                            x:Name="dpDueDate" 
                            Style="{StaticResource ModernDatePicker}"
                            Margin="0,0,0,16"/>

                <!-- Recurring Type -->
                <TextBlock Grid.Row="9" 
                           Text="{x:Static p:Resources.EditExpense_RecurrenceLabel}" 
                           Style="{StaticResource LabelStyle}"/>
                <ComboBox Grid.Row="10"
                          x:Name="cmbRecurring" 
                          Style="{StaticResource ModernComboBox}"
                          IsEditable="True"
                          Margin="0,0,0,16"/>

                <!-- Notes -->
                <TextBlock Grid.Row="11" 
                           Text="{x:Static p:Resources.EditExpense_NotesLabel}" 
                           Style="{StaticResource LabelStyle}"/>
                <TextBox Grid.Row="12"
                         x:Name="txtNotes" 
                         Style="{StaticResource MultiLineTextBox}"
                         Margin="0,0,0,24"/>

                <!-- Buttons -->
                <StackPanel Grid.Row="12" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Right"
                            Margin="0,120,0,0">
                    <Button Content="{x:Static p:Resources.Cancel}"
                            Style="{StaticResource SecondaryButton}"
                            Click="BtnCancel_Click"
                            Margin="0,0,12,0"/>
                    <Button Content="{x:Static p:Resources.EditExpense_SaveButton}"
                            Style="{StaticResource PrimaryButton}"
                            Click="BtnSave_Click"/>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Border>
</Window>
