<UserControl x:Class="Superete.Main.Comptabilite.CMainCo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:res="clr-namespace:GestionComerce.Resources"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1400">

    <UserControl.Resources>
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#2D3748"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F8FAFC"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="AIButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#667EEA" Offset="0"/>
                                    <GradientStop Color="#764BA2" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Background="#F8FAFC">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Sidebar -->
        <Border Grid.Column="0" Background="White" BorderBrush="#E2E8F0" BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <StackPanel Grid.Row="0" Margin="20,20,20,30">
                    <TextBlock Text="{x:Static res:Resources.CMainCo_Title}" FontSize="24" FontWeight="Bold" Foreground="#1E293B" Margin="0,0,0,5"/>
                    <TextBlock Text="{x:Static res:Resources.CMainCo_Subtitle}" FontSize="13" Foreground="#64748B"/>
                </StackPanel>

                <!-- Menu Items -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="15,0,15,20">

                        <Button x:Name="DashboardButton" Style="{StaticResource MenuButtonStyle}" Click="Dashboard_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📊" FontSize="18" Margin="0,0,12,0"/>
                                <TextBlock Text="{x:Static res:Resources.CMainCo_Dashboard}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="JournalButton" Style="{StaticResource MenuButtonStyle}" Click="Journal_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📖" FontSize="18" Margin="0,0,12,0"/>
                                <TextBlock Text="{x:Static res:Resources.CMainCo_Journal}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="GrandLivreButton" Style="{StaticResource MenuButtonStyle}" Click="GrandLivre_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📚" FontSize="18" Margin="0,0,12,0"/>
                                <TextBlock Text="{x:Static res:Resources.CMainCo_GrandLivre}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="PlanComptableButton" Style="{StaticResource MenuButtonStyle}" Click="PlanComptable_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🗂️" FontSize="18" Margin="0,0,12,0"/>
                                <TextBlock Text="{x:Static res:Resources.CMainCo_PlanComptable}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="ExpectationButton" Style="{StaticResource MenuButtonStyle}" Click="Expectation_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🗂️" FontSize="18" Margin="0,0,12,0"/>
                                <TextBlock Text="{x:Static res:Resources.CMainCo_Expectation}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Separator Margin="0,15" Background="#E2E8F0"/>

                        <TextBlock Text="{x:Static res:Resources.CMainCo_Rapports}" FontSize="11" FontWeight="SemiBold" 
                                   Foreground="#94A3B8" Margin="20,10,0,10"/>

                        <Button x:Name="BilanButton" Style="{StaticResource MenuButtonStyle}" Click="Bilan_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="⚖️" FontSize="18" Margin="0,0,12,0"/>
                                <TextBlock Text="{x:Static res:Resources.CMainCo_Bilan}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="CPCButton" Style="{StaticResource MenuButtonStyle}" Click="CPC_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📈" FontSize="18" Margin="0,0,12,0"/>
                                <TextBlock Text="{x:Static res:Resources.CMainCo_CPC}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="GraphesButton" Style="{StaticResource MenuButtonStyle}" Click="Graphes_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📉" FontSize="18" Margin="0,0,12,0"/>
                                <TextBlock Text="{x:Static res:Resources.CMainCo_Graphiques}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Separator Margin="0,15" Background="#E2E8F0"/>

                        <TextBlock Text="{x:Static res:Resources.CMainCo_Gestion}" FontSize="11" FontWeight="SemiBold" 
                                   Foreground="#94A3B8" Margin="20,10,0,10"/>

                        <Button x:Name="GestionEmployesButton" Style="{StaticResource MenuButtonStyle}" Click="BtnGestionEmployes_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="👥" FontSize="18" Margin="0,0,12,0"/>
                                <TextBlock Text="{x:Static res:Resources.CMainCo_Employes}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="SalaireButton" Style="{StaticResource MenuButtonStyle}" Click="BtnGestionSalaire_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="💰" FontSize="18" Margin="0,0,12,0"/>
                                <TextBlock Text="{x:Static res:Resources.CMainCo_Salaires}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="ExpensesButton" Style="{StaticResource MenuButtonStyle}" Click="Expenses_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="💳" FontSize="18" Margin="0,0,12,0"/>
                                <TextBlock Text="{x:Static res:Resources.CMainCo_Depenses}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="RapportButton" Style="{StaticResource MenuButtonStyle}" Click="RapportStats_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📄" FontSize="18" Margin="0,0,12,0"/>
                                <TextBlock Text="{x:Static res:Resources.CMainCo_RapportsStats}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Separator Margin="0,15" Background="#E2E8F0"/>

                        <Button x:Name="AIButton" Style="{StaticResource AIButtonStyle}" Click="AI_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🤖" FontSize="18" Margin="0,0,12,0"/>
                                <TextBlock Text="{x:Static res:Resources.CMainCo_AI}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                    </StackPanel>
                </ScrollViewer>

                <!-- Footer / Back Button -->
                <Border Grid.Row="2" BorderBrush="#E2E8F0" BorderThickness="0,1,0,0" Padding="15">
                    <Button Click="Button_Click" 
                            Background="#EFF6FF" 
                            BorderBrush="#3B82F6" 
                            BorderThickness="1"
                            Padding="15,10"
                            Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="6" 
                                        Padding="{TemplateBinding Padding}">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock Text="←" FontSize="16" Margin="0,0,8,0" Foreground="#3B82F6"/>
                                        <TextBlock Text="{x:Static res:Resources.CMainCo_Retour}" FontSize="13" FontWeight="SemiBold" Foreground="#3B82F6"/>
                                    </StackPanel>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Border>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <ContentControl x:Name="MainContentArea" Grid.Column="1"/>
    </Grid>
</UserControl>
