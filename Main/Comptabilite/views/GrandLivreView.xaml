<UserControl x:Class="Superete.Main.Comptabilite.Views.GrandLivreView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:res="clr-namespace:GestionComerce.Resources"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1100">

    <Grid Background="#F8FAFC">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="White" Padding="30,20" Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="{x:Static res:Resources.GrandLivre_Title}" FontSize="28" FontWeight="Bold" Foreground="#1E293B"/>
                <TextBlock Text="{x:Static res:Resources.GrandLivre_Subtitle}" FontSize="14" Foreground="#64748B" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Account Selection -->
        <Border Grid.Row="1" Background="White" Padding="30,20" Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="{x:Static res:Resources.GrandLivre_Compte}" VerticalAlignment="Center" Margin="0,0,15,0" FontWeight="SemiBold" FontSize="14"/>

                <ComboBox Grid.Column="1" x:Name="CompteComboBox" DisplayMemberPath="Display" SelectedValuePath="CodeCompte"/>

                <Button Grid.Column="3" Padding="20,10" Background="#3B82F6" Foreground="White" 
                        BorderThickness="0" Cursor="Hand" Click="LoadAccount_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🔍" FontSize="14" Margin="0,0,8,0"/>
                                    <TextBlock Text="{x:Static res:Resources.GrandLivre_Afficher}" FontSize="13" FontWeight="SemiBold"/>
                                </StackPanel>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Border>

        <!-- Account Details -->
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Account Header -->
            <Border Grid.Row="0" Background="White" Padding="30,20" Margin="0,0,0,20" Visibility="{Binding ElementName=DetailsPanel, Path=Visibility}">
                <Grid>
                    <StackPanel>
                        <TextBlock x:Name="TxtCompteCode" Text="" FontSize="20" FontWeight="Bold" Foreground="#1E293B"/>
                        <TextBlock x:Name="TxtCompteLibelle" Text="" FontSize="14" Foreground="#64748B" Margin="0,5,0,0"/>
                    </StackPanel>
                    <StackPanel HorizontalAlignment="Right">
                        <TextBlock Text="{x:Static res:Resources.GrandLivre_Solde}" FontSize="12" Foreground="#64748B"/>
                        <TextBlock x:Name="TxtSolde" Text="0,00 DH" FontSize="24" FontWeight="Bold" Foreground="#3B82F6" Margin="0,5,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- DataGrid -->
            <Border Grid.Row="1" x:Name="DetailsPanel" Background="White" CornerRadius="12" Visibility="Collapsed">
                <DataGrid x:Name="GrandLivreDataGrid"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          AlternatingRowBackground="#F9FAFB"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column"
                          SelectionMode="Single"
                          BorderThickness="0"
                          RowHeight="40">

                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#F1F5F9"/>
                            <Setter Property="Foreground" Value="#1E293B"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="Padding" Value="15,10"/>
                            <Setter Property="BorderThickness" Value="0,0,0,2"/>
                            <Setter Property="BorderBrush" Value="#E2E8F0"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="{x:Static res:Resources.GrandLivre_Date}" Binding="{Binding DateEcriture, StringFormat=dd/MM/yyyy}" Width="100"/>
                        <DataGridTextColumn Header="{x:Static res:Resources.GrandLivre_Libelle}" Binding="{Binding Libelle}" Width="*"/>
                        <DataGridTextColumn Header="{x:Static res:Resources.GrandLivre_Debit}" Binding="{Binding Debit, StringFormat=N2}" Width="120">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="Foreground" Value="#EF4444"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="{x:Static res:Resources.GrandLivre_Credit}" Binding="{Binding Credit, StringFormat=N2}" Width="120">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="Foreground" Value="#10B981"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <!-- Empty State -->
            <Border Grid.Row="1" x:Name="EmptyState" Background="White" Padding="50" CornerRadius="12">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="📚" FontSize="64" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                    <TextBlock Text="{x:Static res:Resources.GrandLivre_SelectCompte}" FontSize="18" FontWeight="SemiBold" Foreground="#64748B" HorizontalAlignment="Center"/>
                    <TextBlock Text="{x:Static res:Resources.GrandLivre_SelectCompteHint}" FontSize="14" Foreground="#94A3B8" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
