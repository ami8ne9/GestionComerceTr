<UserControl x:Class="Superete.Main.Comptabilite.Views.BilanView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:res="clr-namespace:GestionComerce.Resources"
             Background="#F0F2F5">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ===== HEADER ===== -->
        <Border Grid.Row="0" Background="White" Padding="20,14" BorderBrush="#E2E8F0" BorderThickness="0,0,0,1">
            <Grid>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="{x:Static res:Resources.Bilan_Title}" FontSize="20" FontWeight="Bold" Foreground="#1A202C" VerticalAlignment="Center"/>
                    <TextBlock Text="{x:Static res:Resources.Bilan_Model}" FontSize="14" Foreground="#718096" VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <TextBlock Text="{x:Static res:Resources.Bilan_ExerciceClos}" FontSize="13" Foreground="#4A5568" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <DatePicker x:Name="DateBilan" Width="150" Height="36" SelectedDateChanged="DateBilan_Changed"/>
                    <Button x:Name="BtnPrint" Content="{x:Static res:Resources.Bilan_Print}" Width="110" Height="36" Margin="10,0,0,0" Click="BtnPrint_Click"
                            Background="#667EEA" Foreground="White" BorderThickness="0" Cursor="Hand"/>
                    <Button x:Name="BtnExcel" Content="{x:Static res:Resources.Bilan_Excel}" Width="100" Height="36" Margin="8,0,0,0" Click="BtnExcel_Click"
                            Background="#48BB78" Foreground="White" BorderThickness="0" Cursor="Hand"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ===== MAIN SCROLL AREA ===== -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <StackPanel Margin="20">

                <!-- Company Info Row -->
                <Border Background="White" CornerRadius="8" Padding="16,10" Margin="0,0,0,12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="{x:Static res:Resources.Bilan_RaisonSociale}" FontSize="10" Foreground="#718096" FontWeight="SemiBold"/>
                            <TextBlock x:Name="TxtRaisonSociale" Text="—" FontSize="13" Foreground="#1A202C" FontWeight="SemiBold"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                            <TextBlock Text="ICE" FontSize="10" Foreground="#718096" FontWeight="SemiBold"/>
                            <TextBlock x:Name="TxtICE" Text="—" FontSize="13" Foreground="#1A202C"/>
                        </StackPanel>
                        <StackPanel Grid.Column="2" HorizontalAlignment="Right">
                            <TextBlock Text="{x:Static res:Resources.Bilan_Exercice}" FontSize="10" Foreground="#718096" FontWeight="SemiBold"/>
                            <TextBlock x:Name="TxtExercice" Text="N" FontSize="13" Foreground="#1A202C"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- ===== BILAN SIDE BY SIDE ===== -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="16"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- ==================== ACTIF ==================== -->
                    <Border Grid.Column="0" Background="White" CornerRadius="10" ClipToBounds="True">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- ACTIF Title -->
                            <Border Background="#C0392B" Padding="14,10">
                                <Grid>
                                    <TextBlock Text="{x:Static res:Resources.Bilan_ActifTitle}" FontSize="16" FontWeight="Bold" Foreground="White"/>
                                    <Grid HorizontalAlignment="Right">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="80"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="{x:Static res:Resources.Bilan_Brut}" FontSize="11" Foreground="White" HorizontalAlignment="Center" FontWeight="SemiBold"/>
                                        <TextBlock Grid.Column="1" Text="{x:Static res:Resources.Bilan_AmortProv}" FontSize="11" Foreground="White" HorizontalAlignment="Center" FontWeight="SemiBold"/>
                                        <TextBlock Grid.Column="2" Text="{x:Static res:Resources.Bilan_NetN}" FontSize="11" Foreground="White" HorizontalAlignment="Center" FontWeight="SemiBold"/>
                                        <TextBlock Grid.Column="3" Text="{x:Static res:Resources.Bilan_NetN1}" FontSize="11" Foreground="White" HorizontalAlignment="Center" FontWeight="SemiBold"/>
                                    </Grid>
                                </Grid>
                            </Border>

                            <!-- ACTIF Content -->
                            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Disabled">
                                <StackPanel x:Name="ActifPanel"/>
                            </ScrollViewer>
                        </Grid>
                    </Border>

                    <!-- ==================== PASSIF ==================== -->
                    <Border Grid.Column="2" Background="White" CornerRadius="10" ClipToBounds="True">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- PASSIF Title -->
                            <Border Background="#C0392B" Padding="14,10">
                                <Grid>
                                    <TextBlock Text="{x:Static res:Resources.Bilan_PassifTitle}" FontSize="16" FontWeight="Bold" Foreground="White"/>
                                    <Grid HorizontalAlignment="Right">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="90"/>
                                            <ColumnDefinition Width="90"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="{x:Static res:Resources.Bilan_ExerciceN}" FontSize="11" Foreground="White" HorizontalAlignment="Center" FontWeight="SemiBold"/>
                                        <TextBlock Grid.Column="1" Text="{x:Static res:Resources.Bilan_N1}" FontSize="11" Foreground="White" HorizontalAlignment="Center" FontWeight="SemiBold"/>
                                    </Grid>
                                </Grid>
                            </Border>

                            <!-- PASSIF Content -->
                            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Disabled">
                                <StackPanel x:Name="PassifPanel"/>
                            </ScrollViewer>
                        </Grid>
                    </Border>
                </Grid>

                <!-- ===== EQUILIBRE ===== -->
                <Border Background="White" CornerRadius="8" Padding="16,12" Margin="0,12,0,0">
                    <Grid>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock x:Name="TxtEquilibre" Text="{x:Static res:Resources.Bilan_Equilibre}"
                                       FontSize="15" FontWeight="Bold" Foreground="#48BB78"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Border Background="#EBF8FF" CornerRadius="6" Padding="12,6" Margin="0,0,12,0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{x:Static res:Resources.Bilan_TotalActifNet}" FontSize="13" Foreground="#2B6CB0" FontWeight="SemiBold"/>
                                    <TextBlock x:Name="TxtTotalActif" Text="0,00 DH" FontSize="14" Foreground="#2B6CB0" FontWeight="Bold"/>
                                </StackPanel>
                            </Border>
                            <Border Background="#F0FFF4" CornerRadius="6" Padding="12,6">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{x:Static res:Resources.Bilan_TotalPassif}" FontSize="13" Foreground="#276749" FontWeight="SemiBold"/>
                                    <TextBlock x:Name="TxtTotalPassif" Text="0,00 DH" FontSize="14" Foreground="#276749" FontWeight="Bold"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- ===== STATUS BAR ===== -->
        <Border Grid.Row="2" Background="#2D3748" Padding="16,6">
            <TextBlock x:Name="TxtStatus" Text="{x:Static res:Resources.Bilan_Ready}" FontSize="11" Foreground="#A0AEC0"/>
        </Border>
    </Grid>
</UserControl>
