<UserControl x:Class="Superete.Main.Comptabilite.Views.PlanComptableView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:res="clr-namespace:GestionComerce.Resources"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1400"
             Background="#FAFBFC">

    <UserControl.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#667EEA"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#7C8FF5"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#CBD5E0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary Button -->
        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#4A5568"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Success Button -->
        <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#48BB78"/>
        </Style>

        <!-- Danger Button -->
        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#F56565"/>
        </Style>

        <!-- DataGrid Style -->
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="RowHeight" Value="48"/>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#F7FAFC"/>
            <Setter Property="Foreground" Value="#4A5568"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="BorderThickness" Value="0,0,0,2"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
        </Style>

        <Style TargetType="DataGridRow">
            <Setter Property="Background" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F7FAFC"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#EBF4FF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="DataGridCell">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="White" Padding="24,20" CornerRadius="12" Margin="0,0,0,20">
            <Border.Effect>
                <DropShadowEffect Color="#000000" Opacity="0.04" BlurRadius="12" ShadowDepth="2"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="📚" FontSize="28" Margin="0,0,12,0" VerticalAlignment="Center"/>
                    <StackPanel>
                        <TextBlock Text="{x:Static res:Resources.PlanComptable_Title}" FontSize="24" FontWeight="SemiBold" Foreground="#1A202C"/>
                        <TextBlock Text="{x:Static res:Resources.PlanComptable_Subtitle}" FontSize="13" Foreground="#718096" Margin="0,4,0,0"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="{x:Static res:Resources.PlanComptable_NewCompte}" Style="{StaticResource ModernButton}" Click="BtnNouveau_Click" Margin="0,0,12,0"/>
                    <Button Content="{x:Static res:Resources.PlanComptable_ExportExcel}" Style="{StaticResource SecondaryButton}" Click="BtnExport_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Filters -->
        <Border Grid.Row="1" Background="White" Padding="20" CornerRadius="12" Margin="0,0,0,20">
            <Border.Effect>
                <DropShadowEffect Color="#000000" Opacity="0.04" BlurRadius="12" ShadowDepth="2"/>
            </Border.Effect>
            <StackPanel Orientation="Horizontal">
                <StackPanel Margin="0,0,16,0">
                    <TextBlock Text="{x:Static res:Resources.PlanComptable_ClasseLabel}" FontSize="13" FontWeight="Medium" Foreground="#4A5568" Margin="0,0,0,6"/>
                    <ComboBox x:Name="ClasseFilter" Width="150" Height="40" SelectionChanged="Filter_Changed">
                        <ComboBoxItem Content="{x:Static res:Resources.PlanComptable_Toutes}" Tag="0" IsSelected="True"/>
                        <ComboBoxItem Content="{x:Static res:Resources.CompteDialog_Classe1}" Tag="1"/>
                        <ComboBoxItem Content="{x:Static res:Resources.CompteDialog_Classe2}" Tag="2"/>
                        <ComboBoxItem Content="{x:Static res:Resources.CompteDialog_Classe3}" Tag="3"/>
                        <ComboBoxItem Content="{x:Static res:Resources.CompteDialog_Classe4}" Tag="4"/>
                        <ComboBoxItem Content="{x:Static res:Resources.CompteDialog_Classe5}" Tag="5"/>
                        <ComboBoxItem Content="{x:Static res:Resources.CompteDialog_Classe6}" Tag="6"/>
                        <ComboBoxItem Content="{x:Static res:Resources.CompteDialog_Classe7}" Tag="7"/>
                        <ComboBoxItem Content="{x:Static res:Resources.CompteDialog_Classe8}" Tag="8"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel Margin="0,0,16,0">
                    <TextBlock Text="{x:Static res:Resources.PlanComptable_TypeCompte}" FontSize="13" FontWeight="Medium" Foreground="#4A5568" Margin="0,0,0,6"/>
                    <ComboBox x:Name="TypeFilter" Width="150" Height="40" SelectionChanged="Filter_Changed">
                        <ComboBoxItem Content="{x:Static res:Resources.PlanComptable_Tous}" IsSelected="True"/>
                        <ComboBoxItem Content="{x:Static res:Resources.CompteDialog_TypeActif}"/>
                        <ComboBoxItem Content="{x:Static res:Resources.CompteDialog_TypePassif}"/>
                        <ComboBoxItem Content="{x:Static res:Resources.CompteDialog_TypeCharge}"/>
                        <ComboBoxItem Content="{x:Static res:Resources.CompteDialog_TypeProduit}"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel Margin="0,0,16,0">
                    <TextBlock Text="{x:Static res:Resources.PlanComptable_Statut}" FontSize="13" FontWeight="Medium" Foreground="#4A5568" Margin="0,0,0,6"/>
                    <ComboBox x:Name="StatutFilter" Width="120" Height="40" SelectionChanged="Filter_Changed">
                        <ComboBoxItem Content="{x:Static res:Resources.PlanComptable_Tous}" IsSelected="True"/>
                        <ComboBoxItem Content="{x:Static res:Resources.PlanComptable_Actif}" Tag="true"/>
                        <ComboBoxItem Content="{x:Static res:Resources.PlanComptable_Inactif}" Tag="false"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel>
                    <TextBlock Text="{x:Static res:Resources.PlanComptable_Rechercher}" FontSize="13" FontWeight="Medium" Foreground="#4A5568" Margin="0,0,0,6"/>
                    <TextBox x:Name="SearchBox" Width="300" Height="40" TextChanged="SearchBox_TextChanged" 
                             VerticalContentAlignment="Center" Padding="12,0"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- DataGrid -->
        <Border Grid.Row="2" Background="White" CornerRadius="12" Padding="0">
            <Border.Effect>
                <DropShadowEffect Color="#000000" Opacity="0.04" BlurRadius="12" ShadowDepth="2"/>
            </Border.Effect>
            <DataGrid x:Name="PlanComptableGrid">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="{x:Static res:Resources.PlanComptable_CodeCompte}" Binding="{Binding CodeCompte}" Width="120">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="Foreground" Value="#2D3748"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Header="{x:Static res:Resources.PlanComptable_Libelle}" Binding="{Binding Libelle}" Width="*"/>

                    <DataGridTextColumn Header="{x:Static res:Resources.PlanComptable_Classe}" Binding="{Binding Classe}" Width="80"/>

                    <DataGridTextColumn Header="{x:Static res:Resources.PlanComptable_Type}" Binding="{Binding TypeCompte}" Width="100"/>

                    <DataGridTextColumn Header="{x:Static res:Resources.PlanComptable_SensNormal}" Binding="{Binding SensNormal}" Width="120"/>

                    <DataGridTemplateColumn Header="{x:Static res:Resources.PlanComptable_Statut}" Width="100">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border Padding="8,4" CornerRadius="12" HorizontalAlignment="Left">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding EstActif}" Value="True">
                                                    <Setter Property="Background" Value="#C6F6D5"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding EstActif}" Value="False">
                                                    <Setter Property="Background" Value="#FED7D7"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <TextBlock FontSize="12" FontWeight="Medium">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="{x:Static res:Resources.PlanComptable_Inactif}"/>
                                                <Setter Property="Foreground" Value="#742A2A"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding EstActif}" Value="True">
                                                        <Setter Property="Text" Value="{x:Static res:Resources.PlanComptable_Actif}"/>
                                                        <Setter Property="Foreground" Value="#22543D"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Header="{x:Static res:Resources.Actions}" Width="180">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Content="✏" ToolTip="Modifier" Width="36" Height="32" FontSize="16"
                                            Style="{StaticResource SecondaryButton}" Padding="0" Margin="0,0,4,0"
                                            Click="BtnEdit_Click" Tag="{Binding CodeCompte}"/>
                                    <Button Content="🗑" ToolTip="Supprimer" Width="36" Height="32" FontSize="16"
                                            Style="{StaticResource DangerButton}" Padding="0"
                                            Click="BtnDelete_Click" Tag="{Binding CodeCompte}"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Footer Summary -->
        <Border Grid.Row="3" Background="White" Padding="20" CornerRadius="12" Margin="0,20,0,0">
            <Border.Effect>
                <DropShadowEffect Color="#000000" Opacity="0.04" BlurRadius="12" ShadowDepth="2"/>
            </Border.Effect>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock Text="{x:Static res:Resources.PlanComptable_TotalComptes}" FontSize="16" FontWeight="SemiBold" Foreground="#2D3748" VerticalAlignment="Center"/>
                <TextBlock x:Name="TxtTotalComptes" Text="0" FontSize="20" FontWeight="Bold" Foreground="#667EEA" Margin="8,0,0,0" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
