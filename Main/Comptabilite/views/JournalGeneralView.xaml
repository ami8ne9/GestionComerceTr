<UserControl x:Class="Superete.Main.Comptabilite.Views.JournalGeneralView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:res="clr-namespace:GestionComerce.Resources"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1100">

    <Grid Background="#F8FAFC">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="White" Padding="30,20" Margin="0,0,0,20">
            <Grid>
                <StackPanel>
                    <TextBlock Text="{x:Static res:Resources.Journal_Title}" FontSize="28" FontWeight="Bold" Foreground="#1E293B"/>
                    <TextBlock Text="{x:Static res:Resources.Journal_Subtitle}" FontSize="14" Foreground="#64748B" Margin="0,5,0,0"/>
                </StackPanel>
                <Button HorizontalAlignment="Right" Padding="16,10" Background="#10B981" Foreground="White" 
                        BorderThickness="0" Cursor="Hand" Click="ExportExcel_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="📊" FontSize="14" Margin="0,0,8,0"/>
                                    <TextBlock Text="{x:Static res:Resources.Journal_ExportExcel}" FontSize="13" FontWeight="SemiBold"/>
                                </StackPanel>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Border>

        <!-- Filters -->
        <Border Grid.Row="1" Background="White" Padding="30,20" Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,20,0">
                    <TextBlock Text="{x:Static res:Resources.Journal_Du}" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="SemiBold"/>
                    <DatePicker x:Name="DateDebut" Width="140" SelectedDate="{Binding DateDebut}"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,20,0">
                    <TextBlock Text="{x:Static res:Resources.Journal_Au}" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="SemiBold"/>
                    <DatePicker x:Name="DateFin" Width="140" SelectedDate="{Binding DateFin}"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="0,0,20,0">
                    <TextBlock Text="{x:Static res:Resources.Journal_Type}" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="SemiBold"/>
                    <ComboBox x:Name="TypeFilter" Width="150">
                        <ComboBoxItem Content="{x:Static res:Resources.Journal_Tous}" IsSelected="True"/>
                        <ComboBoxItem Content="{x:Static res:Resources.Journal_Vente}"/>
                        <ComboBoxItem Content="{x:Static res:Resources.Journal_Achat}"/>
                        <ComboBoxItem Content="{x:Static res:Resources.Journal_Salaire}"/>
                        <ComboBoxItem Content="{x:Static res:Resources.Journal_Depense}"/>
                    </ComboBox>
                </StackPanel>

                <Button Grid.Column="4" Padding="20,10" Background="#3B82F6" Foreground="White" 
                        BorderThickness="0" Cursor="Hand" Click="Filter_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🔍" FontSize="14" Margin="0,0,8,0"/>
                                    <TextBlock Text="{x:Static res:Resources.Journal_Filter}" FontSize="13" FontWeight="SemiBold"/>
                                </StackPanel>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Border>

        <!-- DataGrid -->
        <Border Grid.Row="2" Background="White" Margin="0,0,0,20" CornerRadius="12">
            <DataGrid x:Name="JournalDataGrid"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      AlternatingRowBackground="#F9FAFB"
                      GridLinesVisibility="Horizontal"
                      HeadersVisibility="Column"
                      SelectionMode="Single"
                      BorderThickness="0"
                      RowHeight="40">

                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#F1F5F9"/>
                        <Setter Property="Foreground" Value="#1E293B"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="Padding" Value="15,10"/>
                        <Setter Property="BorderThickness" Value="0,0,0,2"/>
                        <Setter Property="BorderBrush" Value="#E2E8F0"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="{x:Static res:Resources.Journal_Date}" Binding="{Binding DateEcriture, StringFormat=dd/MM/yyyy}" Width="100"/>
                    <DataGridTextColumn Header="{x:Static res:Resources.Journal_Compte}" Binding="{Binding CodeCompte}" Width="80"/>
                    <DataGridTextColumn Header="{x:Static res:Resources.Journal_LibelleCompte}" Binding="{Binding LibelleCompte}" Width="200"/>
                    <DataGridTextColumn Header="{x:Static res:Resources.Journal_LibelleEcriture}" Binding="{Binding Libelle}" Width="*"/>

                    <DataGridTextColumn Header="{x:Static res:Resources.Journal_Debit}" Binding="{Binding Debit, StringFormat=N2}" Width="120">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="Foreground" Value="#EF4444"/>
                                <Setter Property="Padding" Value="0,0,10,0"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Header="{x:Static res:Resources.Journal_Credit}" Binding="{Binding Credit, StringFormat=N2}" Width="120">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="Foreground" Value="#10B981"/>
                                <Setter Property="Padding" Value="0,0,10,0"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Summary Footer -->
        <Border Grid.Row="3" Background="White" Padding="30,20" CornerRadius="12">
            <Grid>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{x:Static res:Resources.Journal_TotalDebit}" FontWeight="Bold" FontSize="14" Margin="0,0,10,0"/>
                    <TextBlock x:Name="TxtTotalDebit" Text="0,00 DH" FontWeight="Bold" FontSize="14" Foreground="#EF4444" Margin="0,0,30,0"/>

                    <TextBlock Text="{x:Static res:Resources.Journal_TotalCredit}" FontWeight="Bold" FontSize="14" Margin="0,0,10,0"/>
                    <TextBlock x:Name="TxtTotalCredit" Text="0,00 DH" FontWeight="Bold" FontSize="14" Foreground="#10B981" Margin="0,0,30,0"/>

                    <TextBlock Text="{x:Static res:Resources.Journal_Difference}" FontWeight="Bold" FontSize="14" Margin="0,0,10,0"/>
                    <TextBlock x:Name="TxtDifference" Text="0,00 DH" FontWeight="Bold" FontSize="14"/>
                </StackPanel>

                <TextBlock x:Name="TxtNombreEcritures" Text="0 écritures" 
                           HorizontalAlignment="Right"
                           FontWeight="SemiBold"
                           FontSize="14"
                           Foreground="#64748B"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
