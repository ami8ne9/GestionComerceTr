<UserControl x:Class="Superete.Main.Comptabilite.Views.DashboardFinancierView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1100">

    <UserControl.Resources>
        <Style x:Key="DashboardCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Margin" Value="0,0,20,20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Opacity="0.08" BlurRadius="20" Direction="270" ShadowDepth="4"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CardTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#64748B"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <Style x:Key="CardValue" TargetType="TextBlock">
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <Style x:Key="CardSubtext" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#94A3B8"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" Background="#F8FAFC">
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="0,0,0,30">
                <StackPanel>
                    <TextBlock Text="Tableau de Bord Financier" FontSize="28" FontWeight="Bold" Foreground="#1E293B" Margin="0,0,0,5"/>
                    <TextBlock x:Name="PeriodText" Text="Exercice 2026" FontSize="14" Foreground="#64748B"/>
                </StackPanel>
                <Button HorizontalAlignment="Right" Padding="16,10" Background="#3B82F6" Foreground="White" 
                        BorderThickness="0" Cursor="Hand" Click="Refresh_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🔄" FontSize="14" Margin="0,0,8,0"/>
                                    <TextBlock Text="Actualiser" FontSize="13" FontWeight="SemiBold"/>
                                </StackPanel>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>

            <!-- Loading Indicator -->
            <Border Grid.Row="1" x:Name="LoadingPanel" Visibility="Collapsed" Background="White" 
                    CornerRadius="8" Padding="30" Margin="0,0,0,20" HorizontalAlignment="Center">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="⏳" FontSize="20" Margin="0,0,10,0"/>
                    <TextBlock Text="Chargement des données..." FontSize="14" Foreground="#64748B" VerticalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Dashboard Content -->
            <StackPanel Grid.Row="2" x:Name="DashboardContent">
                <!-- Financial Metrics Cards -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Total Sales -->
                    <Border Grid.Column="0" Style="{StaticResource DashboardCard}">
                        <StackPanel>
                            <TextBlock Text="💵 VENTES TOTALES" Style="{StaticResource CardTitle}"/>
                            <TextBlock x:Name="TxtTotalVentes" Text="0,00 DH" Style="{StaticResource CardValue}" Foreground="#10B981"/>
                            <TextBlock Text="Chiffre d'affaires" Style="{StaticResource CardSubtext}"/>
                        </StackPanel>
                    </Border>

                    <!-- Net Profit -->
                    <Border Grid.Column="1" Style="{StaticResource DashboardCard}">
                        <StackPanel>
                            <TextBlock Text="📊 BÉNÉFICE NET" Style="{StaticResource CardTitle}"/>
                            <TextBlock x:Name="TxtBeneficeNet" Text="0,00 DH" Style="{StaticResource CardValue}" Foreground="#3B82F6"/>
                            <TextBlock Text="Ventes - Charges" Style="{StaticResource CardSubtext}"/>
                        </StackPanel>
                    </Border>

                    <!-- Treasury -->
                    <Border Grid.Column="2" Style="{StaticResource DashboardCard}" Margin="0">
                        <StackPanel>
                            <TextBlock Text="💰 TRÉSORERIE" Style="{StaticResource CardTitle}"/>
                            <TextBlock x:Name="TxtTresorerie" Text="0,00 DH" Style="{StaticResource CardValue}" Foreground="#F59E0B"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <TextBlock Text="🏦 " FontSize="12"/>
                                <TextBlock x:Name="TxtBanque" Text="0,00 DH" FontSize="11" Foreground="#64748B" Margin="0,0,12,0"/>
                                <TextBlock Text="💵 " FontSize="12"/>
                                <TextBlock x:Name="TxtCaisse" Text="0,00 DH" FontSize="11" Foreground="#64748B"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Charges Breakdown -->
                <Border Style="{StaticResource DashboardCard}" Margin="0,0,0,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Charges Summary -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="💳 CHARGES TOTALES" Style="{StaticResource CardTitle}"/>
                            <TextBlock x:Name="TxtTotalCharges" Text="0,00 DH" 
                                       FontSize="28" FontWeight="Bold" Foreground="#EF4444" Margin="0,0,0,20"/>

                            <!-- Breakdown -->
                            <StackPanel>
                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="🛒 Achats" FontSize="13" Foreground="#64748B"/>
                                    <Border Grid.Column="1" Height="1" Background="#E2E8F0" Margin="10,0" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="2" x:Name="TxtAchats" Text="0,00 DH" FontSize="13" FontWeight="SemiBold" Foreground="#1E293B"/>
                                </Grid>

                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="👥 Salaires" FontSize="13" Foreground="#64748B"/>
                                    <Border Grid.Column="1" Height="1" Background="#E2E8F0" Margin="10,0" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="2" x:Name="TxtSalaires" Text="0,00 DH" FontSize="13" FontWeight="SemiBold" Foreground="#1E293B"/>
                                </Grid>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="📋 Autres" FontSize="13" Foreground="#64748B"/>
                                    <Border Grid.Column="1" Height="1" Background="#E2E8F0" Margin="10,0" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="2" x:Name="TxtAutresDepenses" Text="0,00 DH" FontSize="13" FontWeight="SemiBold" Foreground="#1E293B"/>
                                </Grid>
                            </StackPanel>
                        </StackPanel>

                        <!-- Visual Progress Bars -->
                        <StackPanel Grid.Column="1" Margin="40,0,0,0" VerticalAlignment="Center">
                            <TextBlock Text="RÉPARTITION DES CHARGES" FontSize="12" FontWeight="SemiBold" 
                                       Foreground="#64748B" Margin="0,0,0,15"/>

                            <!-- Achats Bar -->
                            <Grid Margin="0,0,0,12">
                                <Border Height="8" Background="#F1F5F9" CornerRadius="4"/>
                                <Border x:Name="AchatsBar" Height="8" Background="#F59E0B" CornerRadius="4" HorizontalAlignment="Left" Width="0"/>
                            </Grid>

                            <!-- Salaires Bar -->
                            <Grid Margin="0,0,0,12">
                                <Border Height="8" Background="#F1F5F9" CornerRadius="4"/>
                                <Border x:Name="SalairesBar" Height="8" Background="#8B5CF6" CornerRadius="4" HorizontalAlignment="Left" Width="0"/>
                            </Grid>

                            <!-- Autres Bar -->
                            <Grid>
                                <Border Height="8" Background="#F1F5F9" CornerRadius="4"/>
                                <Border x:Name="AutresBar" Height="8" Background="#EC4899" CornerRadius="4" HorizontalAlignment="Left" Width="0"/>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Quick Actions -->
                <Border Style="{StaticResource DashboardCard}" Margin="0">
                    <StackPanel>
                        <TextBlock Text="⚡ ACTIONS RAPIDES" Style="{StaticResource CardTitle}"/>
                        <WrapPanel>
                            <Button Content="📖 Journal Général" Margin="0,0,10,10" Padding="16,12" 
                                    Background="#EFF6FF" Foreground="#3B82F6" BorderThickness="0" 
                                    FontSize="13" FontWeight="SemiBold" Cursor="Hand" Click="OpenJournal_Click">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>

                            <Button Content="📚 Grand Livre" Margin="0,0,10,10" Padding="16,12" 
                                    Background="#EFF6FF" Foreground="#3B82F6" BorderThickness="0" 
                                    FontSize="13" FontWeight="SemiBold" Cursor="Hand" Click="OpenGrandLivre_Click">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>

                            <Button Content="⚖️ Bilan" Margin="0,0,10,10" Padding="16,12" 
                                    Background="#F0FDF4" Foreground="#10B981" BorderThickness="0" 
                                    FontSize="13" FontWeight="SemiBold" Cursor="Hand" Click="OpenBilan_Click">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>

                            <Button Content="📈 CPC" Margin="0,0,10,10" Padding="16,12" 
                                    Background="#F0FDF4" Foreground="#10B981" BorderThickness="0" 
                                    FontSize="13" FontWeight="SemiBold" Cursor="Hand" Click="OpenCPC_Click">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </WrapPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>