<Window x:Class="GestionComerce.Main.Delivery.DeliveryTicketWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:res="clr-namespace:GestionComerce.Resources"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bon de Livraison"
        Height="900"
        Width="700"
        WindowStartupLocation="CenterScreen"
        Background="White">

    <Window.Resources>
        <Style x:Key="TicketTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Courier New"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#000000"/>
        </Style>

        <Style x:Key="BoldTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Courier New"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#000000"/>
        </Style>

        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Arial Black"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#000000"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Ticket Content -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <Border x:Name="TicketBorder" 
                    Background="White" 
                    Margin="20"
                    Padding="30"
                    BorderBrush="#000000"
                    BorderThickness="2">
                <StackPanel>
                    <!-- Header -->
                    <TextBlock Text="{x:Static res:Resources.DeliveryTicketUpper}" 
                               Style="{StaticResource HeaderTextStyle}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>

                    <Rectangle Height="3" Fill="#000000" Margin="0,0,0,15"/>

                    <!-- Company Info -->
                    <TextBlock x:Name="TxtCompanyName"
                               Text="{x:Static res:Resources.CompanyName}" 
                               Style="{StaticResource BoldTextStyle}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,5"/>
                    <TextBlock x:Name="TxtCompanyAddress"
                               Text="{x:Static res:Resources.CompanyAddress}" 
                               Style="{StaticResource TicketTextStyle}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,5"/>
                    <TextBlock x:Name="TxtCompanyPhone"
                               Text="Tél: +212 XXX XXX XXX" 
                               Style="{StaticResource TicketTextStyle}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,20"/>

                    <Rectangle Height="1" Fill="#000000" Margin="0,0,0,15"/>

                    <!-- Delivery Info -->
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="{x:Static res:Resources.TicketNumber}" Style="{StaticResource BoldTextStyle}"/>
                            <TextBlock x:Name="TxtBonNumber" 
                                       Text="LIV-00001" 
                                       Style="{StaticResource TicketTextStyle}"
                                       Margin="0,2,0,10"/>

                            <TextBlock Text="{x:Static res:Resources.DateUpper}" Style="{StaticResource BoldTextStyle}"/>
                            <TextBlock x:Name="TxtDate" 
                                       Text="31/12/2025" 
                                       Style="{StaticResource TicketTextStyle}"
                                       Margin="0,2,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="{x:Static res:Resources.DelivererUpper}" Style="{StaticResource BoldTextStyle}"/>
                            <TextBlock x:Name="TxtLivreur" 
                                       Text="{x:Static res:Resources.DelivererName}" 
                                       Style="{StaticResource TicketTextStyle}"
                                       Margin="0,2,0,10"/>

                            <TextBlock Text="{x:Static res:Resources.TimeUpper}" Style="{StaticResource BoldTextStyle}"/>
                            <TextBlock x:Name="TxtHeure" 
                                       Text="10:00 - 12:00" 
                                       Style="{StaticResource TicketTextStyle}"
                                       Margin="0,2,0,0"/>
                        </StackPanel>
                    </Grid>

                    <Rectangle Height="1" Fill="#000000" Margin="0,10,0,15"/>

                    <!-- Client Info -->
                    <TextBlock Text="{x:Static res:Resources.Recipient}" 
                               Style="{StaticResource BoldTextStyle}"
                               Margin="0,0,0,10"/>

                    <Border BorderBrush="#000000" 
                            BorderThickness="1" 
                            Padding="10"
                            Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock x:Name="TxtClientName" 
                                       Text="{x:Static res:Resources.ClientName}" 
                                       Style="{StaticResource BoldTextStyle}"
                                       Margin="0,0,0,5"/>
                            <TextBlock x:Name="TxtClientPhone" 
                                       Text="Tél: XXX XXX XXX" 
                                       Style="{StaticResource TicketTextStyle}"
                                       Margin="0,0,0,5"/>
                            <TextBlock x:Name="TxtClientAddress" 
                                       Text="{x:Static res:Resources.FullAddress}" 
                                       Style="{StaticResource TicketTextStyle}"
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,5"/>
                            <TextBlock x:Name="TxtClientCity" 
                                       Text="{x:Static res:Resources.CityPostalCode}" 
                                       Style="{StaticResource TicketTextStyle}"/>
                        </StackPanel>
                    </Border>

                    <!-- Articles List -->
                    <TextBlock Text="{x:Static res:Resources.ArticlesToDeliver}" 
                               Style="{StaticResource BoldTextStyle}"
                               Margin="0,0,0,10"/>

                    <Border BorderBrush="#000000" 
                            BorderThickness="1" 
                            Padding="10"
                            Margin="0,0,0,15">
                        <StackPanel x:Name="ArticlesPanel">
                            <!-- Articles will be added here dynamically -->
                        </StackPanel>
                    </Border>

                    <!-- Totals -->
                    <Grid Margin="0,10,0,15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" 
                                   Text="{x:Static res:Resources.TotalOrderColon}" 
                                   Style="{StaticResource TicketTextStyle}"
                                   Margin="0,0,0,5"/>
                        <TextBlock x:Name="TxtTotalCommande" 
                                   Grid.Row="0" Grid.Column="1"
                                   Text="0.00 DH" 
                                   Style="{StaticResource TicketTextStyle}"
                                   Margin="0,0,0,5"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" 
                                   Text="{x:Static res:Resources.DeliveryFeesColon}" 
                                   Style="{StaticResource TicketTextStyle}"
                                   Margin="0,0,0,5"/>
                        <TextBlock x:Name="TxtFraisLivraison" 
                                   Grid.Row="1" Grid.Column="1"
                                   Text="0.00 DH" 
                                   Style="{StaticResource TicketTextStyle}"
                                   Margin="0,0,0,5"/>

                        <Rectangle Grid.Row="2" Grid.ColumnSpan="2" 
                                   Height="1" 
                                   Fill="#000000" 
                                   Margin="0,5"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" 
                                   Text="{x:Static res:Resources.TotalAmount}" 
                                   Style="{StaticResource BoldTextStyle}"
                                   FontSize="16"
                                   Margin="0,5,0,0"/>
                        <TextBlock x:Name="TxtTotal" 
                                   Grid.Row="3" Grid.Column="1"
                                   Text="0.00 DH" 
                                   Style="{StaticResource BoldTextStyle}"
                                   FontSize="16"
                                   Margin="0,5,0,0"/>
                    </Grid>

                    <Rectangle Height="1" Fill="#000000" Margin="0,10,0,15"/>

                    <!-- Payment Info -->
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="{x:Static res:Resources.PaymentModeUpper}" 
                                       Style="{StaticResource BoldTextStyle}"/>
                            <TextBlock x:Name="TxtModePaiement" 
                                       Text="{x:Static res:Resources.Cash}" 
                                       Style="{StaticResource TicketTextStyle}"
                                       Margin="0,2,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="{x:Static res:Resources.ZoneUpper}" 
                                       Style="{StaticResource BoldTextStyle}"/>
                            <TextBlock x:Name="TxtZone" 
                                       Text="Centre Ville" 
                                       Style="{StaticResource TicketTextStyle}"
                                       Margin="0,2,0,0"/>
                        </StackPanel>
                    </Grid>

                    <!-- Notes -->
                    <TextBlock x:Name="NotesSection" 
                               Visibility="Collapsed">
                        <TextBlock Text="{x:Static res:Resources.NotesUpper}" 
                                   Style="{StaticResource BoldTextStyle}"/>
                        <TextBlock x:Name="TxtNotes" 
                                   Text="" 
                                   Style="{StaticResource TicketTextStyle}"
                                   TextWrapping="Wrap"
                                   Margin="0,5,0,15"/>
                    </TextBlock>

                    <Rectangle Height="1" Fill="#000000" Margin="0,10,0,15"/>

                    <!-- Signatures -->
                    <Grid Margin="0,20,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                            <TextBlock Text="{x:Static res:Resources.DelivererSignature}" 
                                       Style="{StaticResource BoldTextStyle}"
                                       HorizontalAlignment="Center"/>
                            <Rectangle Height="60" Width="150" 
                                       Stroke="#000000" 
                                       StrokeThickness="1"
                                       Margin="0,10,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                            <TextBlock Text="{x:Static res:Resources.ClientSignature}" 
                                       Style="{StaticResource BoldTextStyle}"
                                       HorizontalAlignment="Center"/>
                            <Rectangle Height="60" Width="150" 
                                       Stroke="#000000" 
                                       StrokeThickness="1"
                                       Margin="0,10,0,0"/>
                        </StackPanel>
                    </Grid>

                    <!-- Footer -->
                    <TextBlock Text="{x:Static res:Resources.ThankYou}" 
                               Style="{StaticResource TicketTextStyle}"
                               HorizontalAlignment="Center"
                               Margin="0,30,0,0"/>
                </StackPanel>
            </Border>
        </ScrollViewer>

        <!-- Action Buttons -->
        <Border Grid.Row="1" 
                Background="#F8FAFC"
                BorderBrush="#E2E8F0"
                BorderThickness="0,1,0,0"
                Padding="20">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="{x:Static res:Resources.Print}" 
                        Name="BtnPrint"
                        Click="BtnPrint_Click"
                        Height="44"
                        Padding="30,0"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Background="#3B82F6"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Margin="0,0,10,0"/>

                <Button Content="{x:Static res:Resources.SaveAsPDF}" 
                        Name="BtnSavePDF"
                        Click="BtnSavePDF_Click"
                        Height="44"
                        Padding="30,0"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Background="#10B981"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Margin="0,0,10,0"/>

                <Button Content="{x:Static res:Resources.Close}" 
                        Name="BtnClose"
                        Click="BtnClose_Click"
                        Height="44"
                        Padding="30,0"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Background="#6B7280"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>