                            <TextBox x:Name="txtClientAddress" 
                                     MaxLength="100"
                                     Style="{StaticResource ModernTextBox}"
                                     Height="90"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     VerticalContentAlignment="Top"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Invoice Information Section -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <Grid Margin="0,0,0,20">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Border Background="#FEF3C7" 
                                        CornerRadius="10" 
                                        Padding="10"
                                        Margin="0,0,12,0"
                                        Grid.Column="0">
                                    <TextBlock Text="ðŸ’°" FontSize="20"/>
                                </Border>
                                <TextBlock Text="{x:Static resx:Resources.BillingInformation}" 
                                           Style="{StaticResource SectionTitle}"
                                           VerticalAlignment="Center"
                                           Margin="0"
                                           Grid.Column="1"/>
                            </Grid>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button x:Name="btnAddArticle"
                                        Content="{x:Static resx:Resources.AddArticle}"
                                        Style="{StaticResource ModernButtonStyle}"
                                        Background="{StaticResource AccentBrush}"
                                        Foreground="White"
                                        Margin="0,0,12,0"
                                        Click="btnAddArticle_Click"/>

                                <Button x:Name="btnSelectOperation"
                                        Content="{x:Static resx:Resources.AddOperation}"
                                        Style="{StaticResource ModernButtonStyle}"
                                        Background="{StaticResource SuccessBrush}"
                                        Foreground="White"
                                        Click="btnSelectOperation_Click"/>
                            </StackPanel>
                        </Grid>

                        <!-- Operations Container -->
                        <Border Background="{StaticResource InputBrush}" 
        CornerRadius="12" 
        Padding="3"
        Margin="0,0,0,20"
        BorderBrush="{StaticResource BorderBrush}"
        BorderThickness="1.5"
        MaxHeight="400">
                            <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled">
                                <StackPanel x:Name="OperationContainer"/>
                            </ScrollViewer>
                        </Border>

                        <!-- 4 Fields Per Row Layout -->
                        <!-- Row 1 -->
                        <Grid Margin="0,0,0,18">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Margin="0,0,6,0">
                                <TextBlock Text="{x:Static resx:Resources.InvoiceStatus}" Style="{StaticResource FieldLabel}"/>
                                <ComboBox x:Name="EtatFacture" 
                                          Style="{StaticResource ModernComboBox}"
                                          SelectedIndex="0" 
                                          SelectionChanged="EtatFacture_SelectionChanged">
                                    <ComboBoxItem Content="{x:Static resx:Resources.Normal}"/>
                                    <ComboBoxItem Content="{x:Static resx:Resources.Cancelled}"/>
                                </ComboBox>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Margin="6,0">
                                <TextBlock Text="{x:Static resx:Resources.Currency}" Style="{StaticResource FieldLabel}"/>
                                <TextBox x:Name="txtCurrency" 
                                         MaxLength="10"
                                         Style="{StaticResource ModernTextBox}"
                                         Text="MAD"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2" Margin="6,0">
                                <TextBlock Text="{x:Static resx:Resources.VATRate}" Style="{StaticResource FieldLabel}"/>
                                <TextBox x:Name="txtTVARate" 
                                         IsEnabled="False"
                                         PreviewTextInput="DecimalTextBox_PreviewTextInput" 
                                         MaxLength="6"
                                         DataObject.Pasting="DecimalTextBox_Pasting" 
                                         Style="{StaticResource ModernTextBox}" 
                                         Text="0" 
                                         TextChanged="txtTVARate_TextChanged"/>
                            </StackPanel>
                            <StackPanel Grid.Column="3" Margin="6,0,0,0">
                                <TextBlock Text="{x:Static resx:Resources.InvoiceIndex}" Style="{StaticResource FieldLabel}"/>
                                <ComboBox x:Name="IndexFacture" 
                                          Style="{StaticResource ModernComboBox}"
                                          SelectedIndex="0">
                                    <ComboBoxItem Content="0"/>
                                    <ComboBoxItem Content="1"/>
                                </ComboBox>
                            </StackPanel>
                        </Grid>

                        <!-- Row 2 -->
                        <Grid Margin="0,0,0,18">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Margin="0,0,6,0">
                                <TextBlock Text="{x:Static resx:Resources.TotalAmountExclVAT}" Style="{StaticResource FieldLabel}"/>
                                <TextBox x:Name="txtTotalAmount" 
                                         Style="{StaticResource ModernTextBox}" 
                                         IsEnabled="False"
                                         TextChanged="txtTotalAmount_TextChanged" 
                                         MaxLength="20"
                                         FontWeight="SemiBold"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Margin="6,0">
                                <TextBlock Text="{x:Static resx:Resources.VATAmount}" Style="{StaticResource FieldLabel}"/>
                                <TextBox x:Name="txtTVAAmount" 
                                         Style="{StaticResource ModernTextBox}" 
                                         IsEnabled="False"
                                         MaxLength="20"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2" Margin="6,0">
                                <TextBlock Text="{x:Static resx:Resources.TotalAmountInclVAT}" Style="{StaticResource FieldLabel}"/>
                                <TextBox x:Name="txtApresTVAAmount" 
                                         Style="{StaticResource ModernTextBox}" 
                                         IsEnabled="False"
                                         MaxLength="20"
                                         FontWeight="Bold"
                                         FontSize="16"/>
                            </StackPanel>
                            <StackPanel Grid.Column="3" Margin="6,0,0,0">
                                <TextBlock Text="{x:Static resx:Resources.Discount}" Style="{StaticResource FieldLabel}"/>
                                <TextBox x:Name="Remise" 
                                         PreviewTextInput="DecimalTextBox_PreviewTextInput"
                                         TextChanged="Remise_TextChanged"
                                         DataObject.Pasting="DecimalTextBox_Pasting" 
                                         Style="{StaticResource ModernTextBox}" />
                            </StackPanel>
                        </Grid>

                        <!-- Row 3 -->
                        <Grid Margin="0,0,0,18">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Margin="0,0,6,0">
                                <TextBlock Text="{x:Static resx:Resources.TotalAfterDiscount}" Style="{StaticResource FieldLabel}"/>
                                <TextBox x:Name="txtApresRemiseAmount" 
                                         Style="{StaticResource ModernTextBox}" 
                                         IsEnabled="False"
                                         MaxLength="20"
                                         FontWeight="Bold"
                                         FontSize="16" />
                            </StackPanel>
                            <StackPanel Grid.Column="1" Margin="6,0">
                                <TextBlock Text="{x:Static resx:Resources.Object}" Style="{StaticResource FieldLabel}"/>
                                <TextBox x:Name="txtObject" Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2" Margin="6,0">
                                <TextBlock Text="{x:Static resx:Resources.PaymentMethod}" Style="{StaticResource FieldLabel}"/>
                                <ComboBox x:Name="cmbPaymentMethod"
                                          Style="{StaticResource ModernComboBox}"
                                          SelectionChanged="cmbPaymentMethod_SelectionChanged"/>
                            </StackPanel>
                            <StackPanel Grid.Column="3" Margin="6,0,0,0">
                                <TextBlock x:Name="lblChequeReference" 
                                           Text="{x:Static resx:Resources.ChequeReference}" 
                                           Style="{StaticResource FieldLabel}"
                                           Visibility="Collapsed"/>
                                <TextBox x:Name="txtChequeReference" 
                                         Style="{StaticResource ModernTextBox}"
                                         Visibility="Collapsed"/>
                            </StackPanel>
                        </Grid>

                        <!-- Row 4 -->
                        <Grid Margin="0,0,0,18">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Margin="0,0,6,0">
                                <TextBlock Text="{x:Static resx:Resources.GivenBy}" Style="{StaticResource FieldLabel}"/>
                                <TextBox x:Name="txtGivenBy" Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Margin="6,0">
                                <TextBlock Text="{x:Static resx:Resources.ReceivedBy}" Style="{StaticResource FieldLabel}"/>
                                <TextBox x:Name="txtReceivedBy" Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2" Margin="6,0" Grid.ColumnSpan="2">
                                <TextBlock Text="{x:Static resx:Resources.ClientReference}" Style="{StaticResource FieldLabel}"/>
                                <TextBox x:Name="txtClientReference" 
             Style="{StaticResource ModernTextBox}"
             Background="White"
             Foreground="#0F172A"
             FontWeight="SemiBold"/>
                            </StackPanel>
                        </Grid>

                        <!-- Last Row: Description and Montant avec lettre -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Margin="0,0,6,0">
                                <TextBlock Text="{x:Static resx:Resources.DescriptionNotes}" Style="{StaticResource FieldLabel}"/>
                                <TextBox x:Name="txtDescription" 
                                         Style="{StaticResource ModernTextBox}"
                                         Height="120"
                                         MaxLength="500"
                                         TextWrapping="Wrap"
                                         AcceptsReturn="True"
                                         VerticalContentAlignment="Top"
                                         VerticalScrollBarVisibility="Auto"
                                         Padding="16"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Margin="6,0,0,0">
                                <TextBlock Text="{x:Static resx:Resources.AmountInWords}" Style="{StaticResource FieldLabel}"/>
                                <TextBox x:Name="txtAmountInLetters" 
                                         Style="{StaticResource ModernTextBox}" 
                                         Height="120"
                                         IsReadOnly="True" 
                                         TextWrapping="Wrap"
                                         VerticalContentAlignment="Top"
                                         VerticalScrollBarVisibility="Auto"
                                         Padding="16"/>
                            </StackPanel>

                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Action Buttons Section -->
                <Border Background="{StaticResource SurfaceBrush}" 
                        Padding="24,20"
                        Margin="0,0,0,40"
                        CornerRadius="12"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1">
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Right">
                        <Button x:Name="btnPreview"
                                Content="{x:Static resx:Resources.Preview}"
                                Style="{StaticResource ModernButtonStyle}"
                                Background="{StaticResource AccentBrush}"
                                Foreground="White"
                                MinWidth="140"
                                FontSize="15"
                                Click="btnPreview_Click"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
