<Window x:Class="GestionComerce.Main.Facturation.CreateFacture.WAddArticle"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:resx="clr-namespace:GestionComerce.Resources"
        Title="{x:Static resx:Resources.AddArticle}"
        Height="820"
        Width="1200"
        MinHeight="700"
        MinWidth="1000"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#F8FAFC">

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryBrush"      Color="#3B82F6"/>
        <SolidColorBrush x:Key="SuccessBrush"       Color="#10B981"/>
        <SolidColorBrush x:Key="AccentBrush"        Color="#8B5CF6"/>
        <SolidColorBrush x:Key="DangerBrush"        Color="#EF4444"/>
        <SolidColorBrush x:Key="SurfaceBrush"       Color="#FFFFFF"/>
        <SolidColorBrush x:Key="BorderBrush"        Color="#E2E8F0"/>
        <SolidColorBrush x:Key="TableHeaderBrush"   Color="#F1F5F9"/>
        <SolidColorBrush x:Key="TextPrimaryBrush"   Color="#0F172A"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#64748B"/>

        <!-- â”€â”€ Button â”€â”€ -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="FontFamily"      Value="Segoe UI"/>
            <Setter Property="FontSize"        Value="13"/>
            <Setter Property="FontWeight"      Value="SemiBold"/>
            <Setter Property="Padding"         Value="20,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor"          Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Opacity" Value="0.88"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Opacity" Value="0.75"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.45"/>
                                <Setter TargetName="bd" Property="Background" Value="#CBD5E1"/>
                                <Setter Property="Cursor" Value="No"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--
            â”€â”€ TextBox â”€â”€
            ROOT CAUSE FIX: The previous version used TemplateBinding Padding on the
            ScrollViewer Margin, which caused the text content area to collapse and
            hide all typed characters. Fixed by using a literal Margin="10,0" on the
            ScrollViewer so the PART_ContentHost always has room to render text.
        -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="FontFamily"               Value="Segoe UI"/>
            <Setter Property="FontSize"                 Value="13"/>
            <Setter Property="Background"               Value="#FFFFFF"/>
            <Setter Property="BorderBrush"              Value="#E2E8F0"/>
            <Setter Property="BorderThickness"          Value="1.5"/>
            <Setter Property="Foreground"               Value="#0F172A"/>
            <Setter Property="CaretBrush"               Value="#0F172A"/>
            <Setter Property="SelectionBrush"           Value="#BFDBFE"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="7">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          Margin="10,0"
                                          Focusable="False"
                                          HorizontalScrollBarVisibility="Hidden"
                                          VerticalScrollBarVisibility="Hidden"
                                          VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="bd" Property="BorderBrush"    Value="#3B82F6"/>
                                <Setter TargetName="bd" Property="BorderThickness" Value="2"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#F8FAFC"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="bd" Property="Background" Value="#F1F5F9"/>
                                <Setter Property="Foreground" Value="#94A3B8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Field Label -->
        <Style x:Key="FieldLabel" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize"   Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#64748B"/>
            <Setter Property="Margin"     Value="0,0,0,5"/>
        </Style>

        <!-- Table header -->
        <Style x:Key="TableHeaderText" TargetType="TextBlock">
            <Setter Property="FontFamily"        Value="Segoe UI"/>
            <Setter Property="FontSize"          Value="11"/>
            <Setter Property="FontWeight"        Value="Bold"/>
            <Setter Property="Foreground"        Value="#64748B"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Card border -->
        <Style x:Key="CardBorder" TargetType="Border">
            <Setter Property="Background"      Value="#FFFFFF"/>
            <Setter Property="CornerRadius"    Value="12"/>
            <Setter Property="BorderBrush"     Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- â•â• HEADER â•â• -->
        <Border Grid.Row="0" Background="#FFFFFF"
                BorderBrush="#E2E8F0" BorderThickness="0,0,0,1">
            <Grid Margin="32,0">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="#EDE9FE" CornerRadius="9" Padding="10" Margin="0,0,14,0">
                        <TextBlock Text="ðŸ“¦" FontSize="22"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock x:Name="txtWindowTitle"
                                   Text="Gestionnaire d'articles"
                                   FontFamily="Segoe UI" FontSize="20" FontWeight="Bold"
                                   Foreground="#0F172A"/>
                        <TextBlock x:Name="txtWindowSubtitle"
                                   Text="Ajoutez des articles puis confirmez pour les ajouter Ã  la facture"
                                   FontFamily="Segoe UI" FontSize="12"
                                   Foreground="#64748B" Margin="0,2,0,0"/>
                    </StackPanel>
                </StackPanel>
                <Border HorizontalAlignment="Right" VerticalAlignment="Center"
                        Background="#EDE9FE" CornerRadius="20" Padding="16,6">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ“‹  " FontSize="13"/>
                        <TextBlock x:Name="txtArticleCount"
                                   Text="0 article(s) en attente"
                                   FontFamily="Segoe UI" FontSize="13" FontWeight="SemiBold"
                                   Foreground="#8B5CF6"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- â•â• BODY â•â• -->
        <Grid Grid.Row="1" Margin="28,20,28,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="360"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT: form -->
            <Border Grid.Column="0" Style="{StaticResource CardBorder}" Padding="22,18">
                <StackPanel>
                    <TextBlock x:Name="txtFormTitle"
                               Text="Ajouter un article"
                               FontFamily="Segoe UI" FontSize="15" FontWeight="Bold"
                               Foreground="#0F172A" Margin="0,0,0,14"/>

                    <!-- Mode toggle -->
                    <Grid Margin="0,0,0,18">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="8"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button x:Name="btnStockArticle"  Grid.Column="0"
                                Content="ðŸ“¦  Stock"
                                Style="{StaticResource ModernButtonStyle}"
                                Background="#3B82F6" Foreground="White" Height="40"
                                Click="btnStockArticle_Click"/>
                        <Button x:Name="btnCustomArticle" Grid.Column="2"
                                Content="âœï¸  PersonnalisÃ©"
                                Style="{StaticResource ModernButtonStyle}"
                                Background="#E2E8F0" Foreground="#64748B" Height="40"
                                Click="btnCustomArticle_Click"/>
                    </Grid>

                    <!-- STOCK fields -->
                    <StackPanel x:Name="StockArticlePanel" Visibility="Visible">
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="Rechercher" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="txtSearchArticle" Height="40"
                                     Style="{StaticResource ModernTextBox}"
                                     TextChanged="txtSearchArticle_TextChanged"/>
                        </StackPanel>
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="SÃ©lectionner l'article" Style="{StaticResource FieldLabel}"/>
                            <ComboBox x:Name="cmbStockArticles"
                                      Height="40" FontFamily="Segoe UI" FontSize="13"
                                      BorderBrush="#E2E8F0" BorderThickness="1.5"
                                      SelectionChanged="cmbStockArticles_SelectionChanged"/>
                        </StackPanel>
                        <Border x:Name="StockInfoBorder"
                                Background="#F0FDF4" CornerRadius="7" Padding="12,8"
                                Margin="0,0,0,12" Visibility="Collapsed">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Stock disponible : "
                                           FontFamily="Segoe UI" FontSize="12"
                                           FontWeight="SemiBold" Foreground="#166534"/>
                                <TextBlock x:Name="txtAvailableStock"
                                           FontFamily="Segoe UI" FontSize="12"
                                           FontWeight="Bold" Foreground="#16A34A"/>
                            </StackPanel>
                        </Border>
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Prix unitaire (DH)" Style="{StaticResource FieldLabel}"/>
                                <TextBox x:Name="txtStockPrice" Height="40"
                                         Style="{StaticResource ModernTextBox}"
                                         PreviewTextInput="DecimalTextBox_PreviewTextInput"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="QuantitÃ©" Style="{StaticResource FieldLabel}"/>
                                <TextBox x:Name="txtStockQuantity" Height="40"
                                         Style="{StaticResource ModernTextBox}"
                                         PreviewTextInput="DecimalTextBox_PreviewTextInput"/>
                            </StackPanel>
                        </Grid>
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="TVA (%)" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="txtStockTVA" Height="40"
                                     Style="{StaticResource ModernTextBox}"
                                     PreviewTextInput="DecimalTextBox_PreviewTextInput"/>
                        </StackPanel>
                        <StackPanel x:Name="StockExpeditionPanel" Margin="0,0,0,12" Visibility="Collapsed">
                            <TextBlock Text="QuantitÃ© expÃ©diÃ©e" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="txtStockExpedition" Height="40" Text="0"
                                     Style="{StaticResource ModernTextBox}"
                                     PreviewTextInput="DecimalTextBox_PreviewTextInput"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- CUSTOM fields -->
                    <StackPanel x:Name="CustomArticlePanel" Visibility="Collapsed">
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="Nom de l'article" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="txtCustomName" Height="40"
                                     Style="{StaticResource ModernTextBox}"/>
                        </StackPanel>
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Prix unitaire (DH)" Style="{StaticResource FieldLabel}"/>
                                <TextBox x:Name="txtCustomPrice" Height="40"
                                         Style="{StaticResource ModernTextBox}"
                                         PreviewTextInput="DecimalTextBox_PreviewTextInput"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="QuantitÃ©" Style="{StaticResource FieldLabel}"/>
                                <TextBox x:Name="txtCustomQuantity" Height="40"
                                         Style="{StaticResource ModernTextBox}"
                                         PreviewTextInput="DecimalTextBox_PreviewTextInput"/>
                            </StackPanel>
                        </Grid>
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="TVA (%)" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="txtCustomTVA" Height="40"
                                     Style="{StaticResource ModernTextBox}"
                                     PreviewTextInput="DecimalTextBox_PreviewTextInput"/>
                        </StackPanel>
                        <StackPanel x:Name="CustomExpeditionPanel" Margin="0,0,0,12" Visibility="Collapsed">
                            <TextBlock Text="QuantitÃ© expÃ©diÃ©e" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="txtCustomExpedition" Height="40" Text="0"
                                     Style="{StaticResource ModernTextBox}"
                                     PreviewTextInput="DecimalTextBox_PreviewTextInput"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Add / Update button -->
                    <Button x:Name="btnAddToList"
                            Content="ï¼‹  Ajouter Ã  la liste"
                            Style="{StaticResource ModernButtonStyle}"
                            Background="#8B5CF6" Foreground="White"
                            Height="44" Margin="0,10,0,0"
                            IsEnabled="False"
                            Click="btnAddToList_Click"/>
                </StackPanel>
            </Border>

            <!-- RIGHT: table -->
            <Border Grid.Column="2" Style="{StaticResource CardBorder}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="44"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Title bar -->
                    <Border Grid.Row="0"
                            Background="#FAFBFC"
                            BorderBrush="#E2E8F0" BorderThickness="0,0,0,1"
                            CornerRadius="12,12,0,0" Padding="20,14">
                        <Grid>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="ðŸ“‹" FontSize="16" Margin="0,0,8,0"/>
                                <TextBlock Text="Articles en attente de confirmation"
                                           FontFamily="Segoe UI" FontSize="14" FontWeight="Bold"
                                           Foreground="#0F172A"/>
                            </StackPanel>
                            <TextBlock x:Name="txtEmptyHint"
                                       Text="Aucun article ajoutÃ© â€” utilisez le formulaire Ã  gauche"
                                       FontFamily="Segoe UI" FontSize="12" Foreground="#94A3B8"
                                       HorizontalAlignment="Right" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <!-- Column headers -->
                    <Border Grid.Row="1"
                            Background="#F1F5F9"
                            BorderBrush="#E2E8F0" BorderThickness="0,0,0,1"
                            Padding="16,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="34"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="70"/>
                                <ColumnDefinition Width="65"/>
                                <ColumnDefinition Width="110"/>
                                <ColumnDefinition Width="90"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="#"          Style="{StaticResource TableHeaderText}"/>
                            <TextBlock Grid.Column="1" Text="Article"    Style="{StaticResource TableHeaderText}"/>
                            <TextBlock Grid.Column="2" Text="Type"       Style="{StaticResource TableHeaderText}"/>
                            <TextBlock Grid.Column="3" Text="Prix unit." Style="{StaticResource TableHeaderText}"/>
                            <TextBlock Grid.Column="4" Text="QtÃ©"        Style="{StaticResource TableHeaderText}"/>
                            <TextBlock Grid.Column="5" Text="TVA %"      Style="{StaticResource TableHeaderText}"/>
                            <TextBlock Grid.Column="6" Text="Total TTC"  Style="{StaticResource TableHeaderText}"/>
                            <TextBlock Grid.Column="7" Text="Actions"    Style="{StaticResource TableHeaderText}"
                                       HorizontalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <!-- Rows -->
                    <ScrollViewer Grid.Row="2"
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled">
                        <StackPanel x:Name="ArticleTableRows"/>
                    </ScrollViewer>

                    <!-- Totals -->
                    <Border Grid.Row="3"
                            Background="#F8FAFC"
                            BorderBrush="#E2E8F0" BorderThickness="0,1,0,0"
                            CornerRadius="0,0,12,12" Padding="20,14">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="28"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="28"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="Totaux des articles sÃ©lectionnÃ©s"
                                       FontFamily="Segoe UI" FontSize="12"
                                       Foreground="#64748B" VerticalAlignment="Center"/>
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="TOTAL HT"
                                           FontFamily="Segoe UI" FontSize="10" FontWeight="Bold"
                                           Foreground="#94A3B8" HorizontalAlignment="Right"/>
                                <TextBlock x:Name="txtStagedTotalHT" Text="0.00 DH"
                                           FontFamily="Segoe UI" FontSize="15" FontWeight="Bold"
                                           Foreground="#0F172A" HorizontalAlignment="Right"/>
                            </StackPanel>
                            <StackPanel Grid.Column="3">
                                <TextBlock Text="TVA"
                                           FontFamily="Segoe UI" FontSize="10" FontWeight="Bold"
                                           Foreground="#94A3B8" HorizontalAlignment="Right"/>
                                <TextBlock x:Name="txtStagedTVA" Text="0.00 DH"
                                           FontFamily="Segoe UI" FontSize="15" FontWeight="Bold"
                                           Foreground="#F59E0B" HorizontalAlignment="Right"/>
                            </StackPanel>
                            <StackPanel Grid.Column="5">
                                <TextBlock Text="TOTAL TTC"
                                           FontFamily="Segoe UI" FontSize="10" FontWeight="Bold"
                                           Foreground="#94A3B8" HorizontalAlignment="Right"/>
                                <TextBlock x:Name="txtStagedTotalTTC" Text="0.00 DH"
                                           FontFamily="Segoe UI" FontSize="18" FontWeight="Bold"
                                           Foreground="#8B5CF6" HorizontalAlignment="Right"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- â•â• FOOTER â•â• -->
        <Border Grid.Row="2" Background="#FFFFFF"
                BorderBrush="#E2E8F0" BorderThickness="0,1,0,0"
                Padding="28,14">
            <Grid>
                <Button x:Name="btnCancel"
                        Content="Annuler"
                        Style="{StaticResource ModernButtonStyle}"
                        Background="#94A3B8" Foreground="White"
                        Height="44" Width="140" HorizontalAlignment="Left"
                        Click="btnCancel_Click"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="btnClearAll"
                            Content="ðŸ—‘  Vider la liste"
                            Style="{StaticResource ModernButtonStyle}"
                            Background="#FEE2E2" Foreground="#EF4444"
                            Height="44" Width="150" Margin="0,0,12,0"
                            IsEnabled="False"
                            Click="btnClearAll_Click"/>
                    <Button x:Name="btnConfirm"
                            Content="âœ”  Confirmer et ajouter Ã  la facture"
                            Style="{StaticResource ModernButtonStyle}"
                            Background="#10B981" Foreground="White"
                            Height="44" MinWidth="260"
                            IsEnabled="False"
                            Click="btnConfirm_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
