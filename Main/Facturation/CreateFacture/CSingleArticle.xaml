<UserControl x:Class="GestionComerce.Main.Facturation.CreateFacture.CSingleArticle"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:resx="clr-namespace:GestionComerce.Resources"
             mc:Ignorable="d" 
             d:DesignWidth="800" 
             Height="70">
    <Border Background="#F8FAFC" 
            CornerRadius="8" 
            Padding="13" 
            Margin="0,0,0,8" 
            MouseLeftButtonDown="Border_MouseLeftButtonDown" 
            Name="MyBorder"
            Cursor="Hand">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" 
                    Background="#8B5CF6" 
                    Width="4" 
                    Height="40" 
                    CornerRadius="2" 
                    Margin="0,0,12,0"
                    Name="SideColor"/>

            <StackPanel Grid.Column="1">
                <TextBlock x:Name="txtArticleName" 
                           Text="Article Name" 
                           FontWeight="SemiBold" 
                           FontSize="14" 
                           Foreground="#1F2937"/>
                <TextBlock x:Name="txtArticleDetails" 
                           Text="QtÃ©: 0 | TVA: 0%" 
                           FontSize="12" 
                           Foreground="#6B7280" 
                           Margin="0,2,0,0"/>
            </StackPanel>

            <TextBlock Grid.Column="2" 
                       x:Name="txtArticlePrice"
                       Text="0.00 DH" 
                       FontSize="14" 
                       FontWeight="Bold" 
                       Foreground="#8B5CF6" 
                       VerticalAlignment="Center" 
                       Margin="0,0,16,0"/>

            <Border Grid.Column="3"
                    x:Name="ExpeditionBadge"
                    Background="#DBEAFE"
                    CornerRadius="4"
                    Padding="8,4"
                    VerticalAlignment="Center"
                    Margin="0,0,12,0"
                    Visibility="Collapsed">
                <TextBlock x:Name="txtExpeditionInfo"
                           Text="ðŸ“¦ 0 expÃ©diÃ©s"
                           FontSize="11"
                           FontWeight="SemiBold"
                           Foreground="#1E40AF"/>
            </Border>

            <Border Grid.Column="4"
                    x:Name="badgeType"
                    Background="#EDE9FE"
                    CornerRadius="4"
                    Padding="8,4"
                    VerticalAlignment="Center"
                    Margin="0,0,12,0">
                <TextBlock x:Name="txtType"
                           Text="{x:Static resx:Resources.Manual}"
                           FontSize="11"
                           FontWeight="SemiBold"
                           Foreground="#8B5CF6"/>
            </Border>

            <Button x:Name="btnEdit" 
                    Grid.Column="5" 
                    Content="{x:Static resx:Resources.Modify}"
                    Padding="16,8"
                    FontSize="13"
                    FontWeight="SemiBold"
                    Foreground="White"
                    Background="#4299E1"
                    BorderThickness="0"
                    Cursor="Hand" 
                    Click="btnEdit_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="6"/>
                    </Style>
                </Button.Resources>
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="6"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3182CE"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#2C5282"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
    </Border>
</UserControl>
